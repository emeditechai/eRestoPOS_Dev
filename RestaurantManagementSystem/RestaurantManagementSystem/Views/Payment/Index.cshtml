@model PaymentViewModel
@inject RestaurantManagementSystem.Services.UrlEncryptionService EncryptionService
@{
    ViewData["Title"] = "Payment Management";
}

<!-- Anti-forgery token for AJAX requests -->
@Html.AntiForgeryToken()

<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"] - Order #@Model.OrderNumber</h1>
        <div>
            @if (ViewBag.FromBar == true)
            {
                var encryptedOrderUrl = "/Order/Details?token=" + Uri.EscapeDataString(EncryptionService.EncryptParameters(new Dictionary<string, string> { ["id"] = Model.OrderId.ToString(), ["fromBar"] = "true" }));
                
                <a href="@encryptedOrderUrl" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Order
                </a>
            }
            else
            {
                var encryptedOrderUrl = "/Order/Details?token=" + Uri.EscapeDataString(EncryptionService.EncryptParameters(new Dictionary<string, string> { ["id"] = Model.OrderId.ToString() }));
                
                <a href="@encryptedOrderUrl" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Order
                </a>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    


    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0 fw-bold">Order Summary</h5>
                    @if (Model.OrderStatus < 3) @* Not Completed *@
                    {
                        <span class="badge bg-primary rounded-pill px-3 py-2">@Model.OrderStatusDisplay</span>
                    }
                    else if (Model.OrderStatus == 3) @* Completed *@
                    {
                        <span class="badge bg-success rounded-pill px-3 py-2">@Model.OrderStatusDisplay</span>
                    }
                    else @* Cancelled *@
                    {
                        <span class="badge bg-danger rounded-pill px-3 py-2">@Model.OrderStatusDisplay</span>
                    }
                </div>
             <div class="card-body p-4" id="paymentSummary"
                 data-subtotal="@Model.Subtotal" data-gst="@Model.GSTPercentage" data-tip="@Model.TipAmount"
                 data-paid="@Model.PaidAmount" data-existing-discount="@Model.DiscountAmount" data-roundoff="@Model.TotalRoundoff">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <p class="mb-1"><span class="text-muted">Table:</span></p>
                                <p class="fs-5 fw-semibold">@Model.TableName</p>
                            </div>
                            <div class="mb-3">
                                <p class="mb-1"><span class="text-muted">Status:</span></p>
                                <p class="fs-5 fw-semibold">@Model.OrderStatusDisplay</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="row mb-2">
                                        <div class="col-6 text-end text-muted">Subtotal:</div>
                                        <div class="col-6 text-end">₹@Model.Subtotal.ToString("F2")</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-6 text-end text-muted">GST (@Model.GSTPercentage.ToString("F2")%):</div>
                                        <div class="col-6 text-end">₹@Model.TaxAmount.ToString("F2")</div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-6 text-end text-muted small">&nbsp;&nbsp;CGST:</div>
                                        <div class="col-6 text-end small">₹@Model.CGSTAmount.ToString("F2")</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-6 text-end text-muted small">&nbsp;&nbsp;SGST:</div>
                                        <div class="col-6 text-end small">₹@Model.SGSTAmount.ToString("F2")</div>
                                    </div>
                            @if (Model.DiscountAmount > 0)
                            {
                                <div class="row mb-2">
                                    <div class="col-6 text-end">Discount:</div>
                                    <div class="col-6 text-end text-danger">-₹@Model.DiscountAmount.ToString("F2")</div>
                                </div>
                            }
                            @if (Model.TipAmount > 0)
                            {
                                <div class="row mb-2">
                                    <div class="col-6 text-end text-muted">Tip:</div>
                                    <div class="col-6 text-end">₹@Model.TipAmount.ToString("F2")</div>
                                </div>
                            }
                            @{ 
                                // Prefer explicit stored TotalRoundoff. If it's zero but the order is fully paid and
                                // payments exist, compute an implied roundoff as TotalAmount - PaidAmount (this
                                // catches cases where payments stored canonical pre-round amounts but the
                                // Roundoff column wasn't persisted).
                                decimal displayRoundoff = Model.TotalRoundoff;
                                if (displayRoundoff == 0m && Model.RemainingAmount == 0m && Model.Payments != null && Model.Payments.Any())
                                {
                                    displayRoundoff = Math.Round(Model.TotalAmount - Model.PaidAmount, 2, MidpointRounding.AwayFromZero);
                                }
                            }
                            @if (displayRoundoff != 0)
                            {
                                <div class="row mb-2">
                                    <div class="col-6 text-end text-muted">Roundoff Adjustment:</div>
                                    <div class="col-6 text-end">₹@displayRoundoff.ToString("F2")</div>
                                </div>
                            }
                            <hr class="my-2">
                            <div class="row mb-2">
                                <div class="col-6 text-end fw-semibold">Total:</div>
                                <div class="col-6 text-end fw-semibold"><span id="totalAmountDisplay">₹@Model.TotalAmount.ToString("F2")</span></div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6 text-end text-muted">Paid:</div>
                                <div class="col-6 text-end text-success">₹@Model.PaidAmount.ToString("F2")</div>
                            </div>
                            <hr class="my-2">
                            <!-- Discount (Optional) with Amount/Percent toggle -->
                            @if (Model.OrderStatus != 3) @* Only show discount controls if order is not completed *@
                            {
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <div class="text-end flex-grow-1">2. Discount (Optional)</div>
                                    </div>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="btn-group btn-group-sm" role="group" aria-label="Discount type">
                                            <input type="radio" class="btn-check" name="discountType" id="discTypeAmount" value="amount" checked>
                                            <label class="btn btn-outline-secondary" for="discTypeAmount">Amount</label>
                                            <input type="radio" class="btn-check" name="discountType" id="discTypePercent" value="percent">
                                            <label class="btn btn-outline-secondary" for="discTypePercent">Percent</label>
                                        </div>
                                        <div class="input-group input-group-sm flex-grow-1">
                                            <span class="input-group-text" id="discPrefix">₹</span>
                                            <input type="number" min="0" step="0.01" id="preDiscountAmount" class="form-control" placeholder="Enter discount" aria-describedby="discPrefix" />
                                            <button type="button" id="applyDiscountBtn" class="btn btn-outline-primary">Apply</button>
                                            @if (Model.DiscountAmount > 0)
                                            {
                                                <button type="button" id="cancelDiscountBtn" class="btn btn-outline-danger" title="Cancel discount">
                                                    <i class="fas fa-times"></i> Cancel
                                                </button>
                                            }
                                        </div>
                                    </div>
                                    <div class="form-text">If Percent is selected, discount is applied on Subtotal before GST. It will flow to Process Payment and print previews.</div>
                                </div>
                                <hr class="my-2">
                            }
                            <div class="row mb-2">
                                <div class="col-6 text-end fs-5 fw-bold">Remaining:</div>
                                <div class="col-6 text-end fs-5 fw-bold @(Model.RemainingAmount <= 0 ? "text-success" : "text-danger")" id="remainingAmountWrapper">
                                    <span id="remainingAmountDisplay">₹@Model.RemainingAmount.ToString("F2")</span>
                                </div>
                            </div>
                            @* Show expected roundoff if there is a remaining amount (pre-payment) *@
                            @if (Model.RemainingAmount > 0)
                            {
                                var preRound = Model.RemainingAmount;
                                // Use AwayFromZero to ensure .5 rounds up to the next whole rupee
                                var rounded = Math.Round(preRound, 0, MidpointRounding.AwayFromZero);
                                var expectedRoundoff = Math.Round(rounded - preRound, 2, MidpointRounding.AwayFromZero);
                                <div class="row mb-2">
                                    <div class="col-6 text-end text-muted">Roundoff (if paid now):</div>
                                    <div class="col-6 text-end"><span id="roundoffIfNowDisplay">₹@expectedRoundoff.ToString("+0.00;-0.00;0.00")</span></div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6 text-end fw-semibold">Total to Process:</div>
                                    <div class="col-6 text-end fw-semibold"><span id="totalToProcessDisplay">₹@rounded.ToString("F0")</span></div>
                                </div>
                            }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        @if (Model.OrderStatus == 3) @* Completed - Show Only POS Print Bill *@
                        {
                            <div class="d-flex gap-2">
                                @{
                                    var billFormat = (ViewBag.BillFormat ?? "A4").ToString();
                                }
                                @if (string.Equals(billFormat, "POS", StringComparison.OrdinalIgnoreCase))
                                {
                                    <a id="printPOSLink" asp-action="PrintPOS" asp-route-orderId="@Model.OrderId" class="btn btn-outline-dark btn-lg" target="_blank">
                                        <i class="fas fa-print me-1"></i> POS Print Bill
                                    </a>
                                }
                                else
                                {
                                    <a id="printA4Link" asp-action="PrintBill" asp-route-orderId="@Model.OrderId" class="btn btn-outline-success btn-lg" target="_blank">
                                        <i class="fas fa-print me-1"></i> Print Bill(A4)
                                    </a>
                                }
                            </div>
                        }
                        else if (Model.OrderStatus != 4) @* Not Cancelled and Not Completed *@
                        {
                            <div class="d-flex gap-2">
                                @if (Model.RemainingAmount > 0)
                                {
                                    var encryptedPaymentUrl = "/Payment/ProcessPayment?token=" + Uri.EscapeDataString(EncryptionService.EncryptParameters(new Dictionary<string, string> { ["orderId"] = Model.OrderId.ToString() }));
                                    
                                    <a id="processPaymentLink" href="@encryptedPaymentUrl" class="btn btn-primary btn-lg">
                                        <i class="fas fa-money-bill-wave me-1"></i> Process Payment
                                    </a>
                                }
                                
                                <a asp-action="SplitBill" asp-route-orderId="@Model.OrderId" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-receipt me-1"></i> Split Bill
                                </a>
                                
                                @{
                                    var billFormat = (ViewBag.BillFormat ?? "A4").ToString();
                                }
                                @if (!string.Equals(billFormat, "POS", StringComparison.OrdinalIgnoreCase))
                                {
                                    <a id="printA4Link" asp-action="PrintBill" asp-route-orderId="@Model.OrderId" class="btn btn-outline-success btn-lg" target="_blank">
                                        <i class="fas fa-print me-1"></i> Print Bill(A4)
                                    </a>
                                }
                                @if (string.Equals(billFormat, "POS", StringComparison.OrdinalIgnoreCase))
                                {
                                    <a id="printPOSLink" asp-action="PrintPOS" asp-route-orderId="@Model.OrderId" class="btn btn-outline-dark btn-lg" target="_blank">
                                        <i class="fas fa-print me-1"></i> POS Print Bill
                                    </a>
                                }
                                
                                @* Manual 'Mark as Completed' removed — orders will be auto-completed when there is no due. *@
                            </div>
                        }
                    </div>
                </div>
            </div>

            @if (Model.Payments.Any())
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Payment History</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">Date/Time</th>
                                        <th>Method</th>
                                        <th>Amount</th>
                                        <th>Tip</th>
                                        <th>Status</th>
                                        <th>Processed By</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.Payments)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="fw-semibold">@payment.CreatedAt.ToString("MM/dd/yyyy")</div>
                                                <div class="small text-muted">@payment.CreatedAt.ToString("HH:mm")</div>
                                            </td>
                                            <td>
                                                <div class="fw-semibold">@payment.PaymentMethodDisplay</div>
                                                @if (!string.IsNullOrEmpty(payment.LastFourDigits))
                                                {
                                                    <div class="small text-muted">
                                                        @payment.CardType •••• @payment.LastFourDigits
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(payment.ReferenceNumber))
                                                {
                                                    <div class="small text-muted">Ref: @payment.ReferenceNumber</div>
                                                }
                                            </td>
                                            <td class="fw-semibold">₹@payment.Amount.ToString("F2")</td>
                                            <td>₹@payment.TipAmount.ToString("F2")</td>
                                            <td>
                                                @{
                                                    var badgeClass = payment.Status switch
                                                    {
                                                        0 => "bg-warning text-dark",
                                                        1 => "bg-success",
                                                        2 => "bg-danger",
                                                        3 => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass rounded-pill px-3 py-2">@payment.StatusDisplay</span>
                                            </td>
                                            <td>@payment.ProcessedByName</td>
                                            <td class="text-end pe-4">
                                                @if (payment.Status == 0) @* Pending - Needs Approval *@
                                                {
                                                    <div class="btn-group" role="group">
                                                        <form asp-action="ApprovePayment" asp-route-id="@payment.Id" method="post" style="display:inline;">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-outline-success rounded-pill px-3 me-1" 
                                                                    onclick="return confirm('Are you sure you want to approve this payment?')">
                                                                <i class="fas fa-check me-1"></i> Approve
                                                            </button>
                                                        </form>
                                                        <button type="button" class="btn btn-sm btn-outline-danger rounded-pill px-3" 
                                                                data-bs-toggle="modal" data-bs-target="#rejectModal-@payment.Id">
                                                            <i class="fas fa-times me-1"></i> Reject
                                                        </button>
                                                    </div>
                                                    
                                                    <!-- Reject Modal -->
                                                    <div class="modal fade" id="rejectModal-@payment.Id" tabindex="-1" aria-labelledby="rejectModalLabel-@payment.Id" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header bg-danger text-white">
                                                                    <h5 class="modal-title" id="rejectModalLabel-@payment.Id">
                                                                        <i class="fas fa-exclamation-triangle me-2"></i>Reject Payment
                                                                    </h5>
                                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <form asp-action="RejectPayment" asp-route-id="@payment.Id" method="post">
                                                                    @Html.AntiForgeryToken()
                                                                    <div class="modal-body">
                                                                        <p>Are you sure you want to reject this payment of <strong>₹@payment.Amount.ToString("F2")</strong>?</p>
                                                                        <div class="mb-3">
                                                                            <label for="reason-@payment.Id" class="form-label">Reason for Rejection (Optional):</label>
                                                                            <textarea class="form-control" id="reason-@payment.Id" name="reason" rows="3" 
                                                                                      placeholder="Enter reason for rejecting this payment..."></textarea>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                        <button type="submit" class="btn btn-danger">
                                                                            <i class="fas fa-times me-1"></i> Reject Payment
                                                                        </button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                else if (payment.Status == 1) @* Approved - Show Void button *@
                                                {
                                                    var paymentAge = DateTime.Now - payment.CreatedAt;
                                                    var canVoid = paymentAge.TotalDays <= 7; // Allow void within 7 days
                                                    var isOrderCompleted = Model.OrderStatus == 3;
                                                    
                                                    if (canVoid)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-danger rounded-pill px-3" 
                                                                data-bs-toggle="modal" data-bs-target="#voidModal-@payment.Id">
                                                            <i class="fas fa-ban me-1"></i> Void
                                                        </button>
                                                        
                                                        <!-- Void Payment Modal -->
                                                        <div class="modal fade" id="voidModal-@payment.Id" tabindex="-1" aria-labelledby="voidModalLabel-@payment.Id" aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered">
                                                                <div class="modal-content">
                                                                    <div class="modal-header bg-danger text-white">
                                                                        <h5 class="modal-title" id="voidModalLabel-@payment.Id">
                                                                            <i class="fas fa-exclamation-triangle me-2"></i>Void Payment - Confirmation Required
                                                                        </h5>
                                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <div class="alert alert-warning mb-3">
                                                                            <i class="fas fa-info-circle me-2"></i>
                                                                            <strong>Warning:</strong> This action cannot be undone. The payment will be permanently voided.
                                                                        </div>
                                                                        
                                                                        <div class="card bg-light mb-3">
                                                                            <div class="card-body">
                                                                                <h6 class="card-subtitle mb-2 text-muted">Payment Details</h6>
                                                                                <div class="row">
                                                                                    <div class="col-6">
                                                                                        <small class="text-muted">Amount:</small><br>
                                                                                        <strong class="text-danger">₹@payment.Amount.ToString("F2")</strong>
                                                                                    </div>
                                                                                    <div class="col-6">
                                                                                        <small class="text-muted">Method:</small><br>
                                                                                        <strong>@payment.PaymentMethodDisplay</strong>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="row mt-2">
                                                                                    <div class="col-6">
                                                                                        <small class="text-muted">Date:</small><br>
                                                                                        <strong>@payment.CreatedAt.ToString("MM/dd/yyyy HH:mm")</strong>
                                                                                    </div>
                                                                                    <div class="col-6">
                                                                                        <small class="text-muted">Processed By:</small><br>
                                                                                        <strong>@payment.ProcessedByName</strong>
                                                                                    </div>
                                                                                </div>
                                                                                @if (isOrderCompleted)
                                                                                {
                                                                                    <div class="alert alert-info mt-2 mb-0">
                                                                                        <small>
                                                                                            <i class="fas fa-info-circle me-1"></i>
                                                                                            <strong>Note:</strong> This order is completed. Voiding will reopen the order for settlement.
                                                                                        </small>
                                                                                    </div>
                                                                                }
                                                                            </div>
                                                                        </div>
                                                                        
                                                                        <form asp-action="VoidPayment" method="post" id="voidForm-@payment.Id">
                                                                            @Html.AntiForgeryToken()
                                                                            <input type="hidden" name="PaymentId" value="@payment.Id" />
                                                                            <input type="hidden" name="OrderId" value="@Model.OrderId" />
                                                                            <input type="hidden" name="PaymentAmount" value="@payment.Amount" />
                                                                            <input type="hidden" name="TipAmount" value="@payment.TipAmount" />
                                                                            
                                                                            <div class="mb-3">
                                                                                <label for="voidReason-@payment.Id" class="form-label">
                                                                                    <strong class="text-danger">* Reason for Voiding (Required):</strong>
                                                                                </label>
                                                                                <textarea class="form-control" id="voidReason-@payment.Id" name="Reason" rows="3" 
                                                                                          placeholder="Please provide a detailed reason for voiding this payment..." required></textarea>
                                                                                <div class="form-text">This will be recorded in the audit trail.</div>
                                                                            </div>
                                                                            
                                                                            <div class="form-check mb-3">
                                                                                <input class="form-check-input" type="checkbox" id="confirmVoid-@payment.Id" required>
                                                                                <label class="form-check-label" for="confirmVoid-@payment.Id">
                                                                                    I understand this action cannot be undone and confirm that I want to void this payment.
                                                                                </label>
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                            <i class="fas fa-times me-1"></i> Cancel
                                                                        </button>
                                                                        <button type="submit" form="voidForm-@payment.Id" class="btn btn-danger">
                                                                            <i class="fas fa-ban me-1"></i> Confirm Void Payment
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted small" title="Cannot void payments older than 7 days">
                                                            <i class="fas fa-lock me-1"></i> Void Expired
                                                        </span>
                                                    }
                                                }
                                else if (payment.Status == 2) @* Rejected *@
                                {
                                    <span class="text-muted">
                                        <i class="fas fa-times-circle me-1"></i> Rejected
                                    </span>
                                }
                                else if (payment.Status == 3) @* Voided *@
                                {
                                    <span class="text-muted">
                                        <i class="fas fa-ban me-1"></i> Voided
                                    </span>
                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            
            @if (Model.SplitBills.Any())
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Split Bills</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">Date/Time</th>
                                        <th>Amount</th>
                                        <th>GST</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th class="pe-4">Created By</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var splitBill in Model.SplitBills)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="fw-semibold">@splitBill.CreatedAt.ToString("MM/dd/yyyy")</div>
                                                <div class="small text-muted">@splitBill.CreatedAt.ToString("HH:mm")</div>
                                            </td>
                                            <td>₹@splitBill.Amount.ToString("F2")</td>
                                            <td>₹@splitBill.TaxAmount.ToString("F2")</td>
                                            <td class="fw-semibold">₹@(splitBill.Amount + splitBill.TaxAmount).ToString("F2")</td>
                                            <td>
                                                @{
                                                    var badgeClass = splitBill.Status switch
                                                    {
                                                        0 => "bg-primary",
                                                        1 => "bg-success",
                                                        2 => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass rounded-pill px-3 py-2">@splitBill.StatusDisplay</span>
                                            </td>
                                            <td class="pe-4">@splitBill.CreatedByName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-lg-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Order Items</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.OrderItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center px-4 py-3">
                                <div>
                                    <div class="fw-semibold">@item.MenuItemName</div>
                                    <div class="small text-muted">@item.Quantity x ₹@item.UnitPrice.ToString("F2")</div>
                                </div>
                                <div class="fw-bold">₹@item.Subtotal.ToString("F2")</div>
                            </li>
                        }
                    </ul>
                    <div class="card-footer bg-light p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">Total Items:</span>
                            <span class="fw-semibold">@Model.OrderItems.Sum(i => i.Quantity)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Printing is handled by server-rendered actions:
        // - /Payment/PrintBill/{orderId} (A4)
        // - /Payment/PrintPOS/{orderId} (POS receipt)
        // Anchor buttons on the page open these in a new tab/window.
        function openPrintBill(orderId) {
            window.open('/Payment/PrintBill/' + orderId, '_blank');
        }

        // Wire up Discount (Amount/Percent): update links and preview Remaining/Roundoff/Total-to-Process
        (function() {
            const applyBtn = document.getElementById('applyDiscountBtn');
            const input = document.getElementById('preDiscountAmount');
            const typeAmount = document.getElementById('discTypeAmount');
            const typePercent = document.getElementById('discTypePercent');
            const lblAmount = document.querySelector('label[for="discTypeAmount"]');
            const lblPercent = document.querySelector('label[for="discTypePercent"]');
            const discPrefix = document.getElementById('discPrefix');
            const processLink = document.getElementById('processPaymentLink');
            const printA4 = document.getElementById('printA4Link');
            const printPOS = document.getElementById('printPOSLink');
            const summary = document.getElementById('paymentSummary');
            if (!applyBtn || !input || !processLink || !summary) return;

            const remainingEl = document.getElementById('remainingAmountDisplay');
            const remainingWrap = document.getElementById('remainingAmountWrapper');
            const roundoffEl = document.getElementById('roundoffIfNowDisplay');
            const totalProcessEl = document.getElementById('totalToProcessDisplay');
            const totalAmountEl = document.getElementById('totalAmountDisplay');

            // Lock/unlock state for the discount UI
            let discountLocked = false;
            function setLocked(state) {
                discountLocked = !!state;
                input.disabled = discountLocked;
                typeAmount.disabled = discountLocked;
                typePercent.disabled = discountLocked;
                // Visually dim the toggle labels when locked
                [lblAmount, lblPercent].forEach(l => {
                    if (!l) return;
                    l.classList.toggle('disabled', discountLocked);
                });
                // Toggle button text and style
                if (discountLocked) {
                    applyBtn.textContent = 'Edit';
                    applyBtn.classList.remove('btn-outline-primary');
                    applyBtn.classList.add('btn-outline-secondary');
                } else {
                    applyBtn.textContent = 'Apply';
                    applyBtn.classList.remove('btn-outline-secondary');
                    applyBtn.classList.add('btn-outline-primary');
                }
            }

            function fmtMoney(val, digits=2) {
                const sign = val < 0 ? '-' : '';
                const abs = Math.abs(val);
                return `₹${abs.toFixed(digits)}`.replace(/^/, sign);
            }
            function roundAway(val, digits) {
                const m = Math.pow(10, digits);
                return Math.round(val * m + (val >= 0 ? 0.0000001 : -0.0000001)) / m; // mitigate float noise
            }
            function roundMoney(val) {
                return Math.round(val * 100) / 100;
            }
            function roundHalfUp(val) {
                // Nearest rupee, half-away-from-zero.
                // Correct behavior: integers remain unchanged; .5 goes to next magnitude.
                if (!isFinite(val)) return 0;
                return (val >= 0) ? Math.floor(val + 0.5) : Math.ceil(val - 0.5);
            }
            function currentType() { return (typePercent && typePercent.checked) ? 'percent' : 'amount'; }
            function clamp(n, min, max) { return Math.min(Math.max(n, min), max); }
            function parseNum(s) { const v = parseFloat(s); return isNaN(v) ? 0 : v; }

            const baseSubtotal = parseNum(summary.dataset.subtotal);
            const gstPerc = parseNum(summary.dataset.gst);
            const tip = parseNum(summary.dataset.tip);
            const paid = parseNum(summary.dataset.paid);
            const existingDisc = parseNum(summary.dataset.existingDiscount);
            const existingRoundoff = parseNum(summary.dataset.roundoff);

            function computeDiscountAmount() {
                let v = parseNum(input.value);
                if (currentType() === 'percent') {
                    v = clamp(v, 0, 100);
                    return roundMoney(baseSubtotal * v / 100.0);
                }
                // amount
                v = Math.max(0, v);
                return roundMoney(v);
            }

            function updateLinksAndPreview() {
                const userDiscAmt = computeDiscountAmount();
                const combinedDisc = Math.min(baseSubtotal, roundMoney(existingDisc + userDiscAmt));
                const netSub = roundMoney(baseSubtotal - combinedDisc);
                const gstAmt = roundMoney(netSub * gstPerc / 100.0);
                const total = roundMoney(netSub + gstAmt + tip);
                // Calculate roundoff ON TOTAL to avoid double-rounding when previous payments already include roundoff
                const totalRounded = roundHalfUp(total);
                const overallRoundoff = roundMoney(totalRounded - total);
                const additionalRoundoffNow = roundMoney(overallRoundoff - existingRoundoff);
                // Amount the customer needs to pay now is Rounded(Total) minus ALL amounts already paid (incl. previous roundoff)
                let toProcess = Math.max(0, totalRounded - paid);
                const remaining = roundMoney(total - paid);
                const roundoff = additionalRoundoffNow;

                // Update displays
                if (remainingEl) remainingEl.textContent = fmtMoney(remaining);
                if (totalAmountEl) totalAmountEl.textContent = fmtMoney(total);
                if (roundoffEl) roundoffEl.textContent = (roundoff===0? '₹0.00' : (roundoff>0? `₹+${roundoff.toFixed(2)}` : `₹${roundoff.toFixed(2)}`));
                if (totalProcessEl) totalProcessEl.textContent = `₹${toProcess.toFixed(0)}`;
                if (remainingWrap) {
                    remainingWrap.classList.remove('text-success','text-danger');
                    remainingWrap.classList.add(remaining<=0 ? 'text-success' : 'text-danger');
                }

                // Update Process Payment link with encrypted URL
                if (processLink) {
                    const orderId = @Model.OrderId;
                    const discountVal = userDiscAmt > 0 ? userDiscAmt.toFixed(2) : null;
                    
                    // Fetch encrypted URL from server
                    let encryptedUrlEndpoint = `/Payment/GenerateEncryptedPaymentUrl?orderId=${orderId}`;
                    if (discountVal) {
                        encryptedUrlEndpoint += `&discount=${encodeURIComponent(discountVal)}`;
                    }
                    
                    fetch(encryptedUrlEndpoint)
                        .then(res => res.json())
                        .then(data => {
                            if (data.success && data.url) {
                                processLink.setAttribute('href', data.url);
                            }
                        })
                        .catch(err => console.error('Failed to generate encrypted URL:', err));
                }

                // Update print links (these can stay with plain parameters for now)
                const applyParam = (anchor) => {
                    if (!anchor) return;
                    const href = anchor.getAttribute('href');
                    try {
                        const url = new URL(href, window.location.origin);
                        if (userDiscAmt > 0) {
                            url.searchParams.set('discount', userDiscAmt.toFixed(2));
                        } else {
                            url.searchParams.delete('discount');
                        }
                        anchor.setAttribute('href', url.pathname + url.search);
                    } catch(e) {
                        let base = href.split('?')[0];
                        if (userDiscAmt > 0) base += `?discount=${encodeURIComponent(userDiscAmt.toFixed(2))}`;
                        anchor.setAttribute('href', base);
                    }
                };
                applyParam(printA4);
                applyParam(printPOS);
            }

            function setPrefix() {
                if (discPrefix) discPrefix.textContent = currentType() === 'percent' ? '%' : '₹';
            }

            applyBtn.addEventListener('click', function() {
                if (!discountLocked) {
                    // Apply and freeze - now persist to backend
                    const discAmount = computeDiscountAmount();
                    if (discAmount <= 0) {
                        alert('Please enter a valid discount amount');
                        return;
                    }
                    
                    // Get CSRF token
                    const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                    if (!token) {
                        alert('Security token not found. Please refresh the page.');
                        return;
                    }
                    
                    // Persist discount to backend
                    fetch('/Payment/ApplyDiscount', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': token
                        },
                        body: new URLSearchParams({
                            orderId: @Model.OrderId,
                            discount: input.value,
                            discountType: currentType(),
                            __RequestVerificationToken: token
                        })
                    })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            // Success - update UI
                            setPrefix();
                            updateLinksAndPreview();
                            setLocked(true);
                            
                            // Visual confirm
                            applyBtn.classList.remove('btn-outline-secondary');
                            applyBtn.classList.add('btn-secondary');
                            setTimeout(() => {
                                applyBtn.classList.add('btn-outline-secondary');
                                applyBtn.classList.remove('btn-secondary');
                                
                                // Reload page to show updated totals from backend
                                window.location.reload();
                            }, 400);
                        } else {
                            alert('Failed to apply discount: ' + (data.error || 'Unknown error'));
                        }
                    })
                    .catch(err => {
                        console.error('Error applying discount:', err);
                        alert('Failed to apply discount. Please try again.');
                    });
                } else {
                    // Unlock for editing
                    setLocked(false);
                    // Focus input for quick edit
                    setTimeout(() => input && input.focus(), 0);
                }
            });
            
            // Cancel discount button handler
            const cancelBtn = document.getElementById('cancelDiscountBtn');
            if (cancelBtn) {
                cancelBtn.addEventListener('click', function() {
                    if (!confirm('Are you sure you want to cancel the discount?')) {
                        return;
                    }
                    
                    // Get CSRF token
                    const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                    if (!token) {
                        alert('Security token not found. Please refresh the page.');
                        return;
                    }
                    
                    // Remove discount from backend
                    fetch('/Payment/CancelDiscount', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': token
                        },
                        body: new URLSearchParams({
                            orderId: @Model.OrderId,
                            __RequestVerificationToken: token
                        })
                    })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            // Clear input and reload
                            if (input) input.value = '';
                            window.location.reload();
                        } else {
                            alert('Failed to cancel discount: ' + (data.error || 'Unknown error'));
                        }
                    })
                    .catch(err => {
                        console.error('Error canceling discount:', err);
                        alert('Failed to cancel discount. Please try again.');
                    });
                });
            }
            
            [typeAmount, typePercent].forEach(el => el && el.addEventListener('change', () => {
                setPrefix();
            }));
            input.addEventListener('keydown', function(evt) {
                if (evt.key === 'Enter') { evt.preventDefault(); applyBtn.click(); }
            });

            // Initialize prefix based on default selection
            setPrefix();
        })();
    </script>
}
