@model ProcessPaymentViewModel
@{
    ViewData["Title"] = "Process Payment";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0 fw-bold">@ViewData["Title"]</h1>
            <p class="text-muted fs-5">Order #@Model.OrderNumber</p>
        </div>
        <div>
            <a asp-action="Index" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="fas fa-arrow-left me-2"></i> Back to Payment
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 mx-auto">
            <ul class="nav nav-tabs" id="paymentTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="single-tab" data-bs-toggle="tab" data-bs-target="#singlePane" type="button" role="tab" aria-controls="singlePane" aria-selected="true">
                        Single Payment
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="split-tab" data-bs-toggle="tab" data-bs-target="#splitPane" type="button" role="tab" aria-controls="splitPane" aria-selected="false">
                        Split Payment
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="paymentTabsContent">
                <div class="tab-pane fade show active" id="singlePane" role="tabpanel" aria-labelledby="single-tab">
                    <div class="card mb-4 shadow-sm border-0 rounded-3">
                        <div class="card-header bg-white py-3 border-0">
                            <h4 class="mb-0 fw-bold text-primary">Payment Details</h4>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="ProcessPayment" method="post" id="processPaymentForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="OrderId" />
                        <input type="hidden" asp-for="OrderNumber" />
                        <input type="hidden" asp-for="TotalAmount" />
                        <input type="hidden" asp-for="RemainingAmount" />
                        <input type="hidden" asp-for="Subtotal" />
                        <input type="hidden" asp-for="GSTPercentage" />
                        <input type="hidden" asp-for="RoundoffAdjustmentAmt" id="RoundoffAdjustmentAmt" />
                        <input type="hidden" asp-for="OriginalAmount" id="OriginalAmount" />
                        
                        <!-- Payment Summary Card -->
                        <div class="card mb-4 bg-light rounded-3">
                            <div class="card-body p-3">
                                <div class="row align-items-center">
                                    <div class="col-md-5">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <i class="fas fa-receipt fa-2x text-primary opacity-50"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 text-muted">Order Total</h6>
                                                <h4 class="mb-0 fw-bold text-primary">₹<span id="orderTotalDisplay">@Model.TotalAmount.ToString("F2")</span></h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-center d-none d-md-block">
                                        <div class="border-start h-100"></div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <i class="fas fa-wallet fa-2x text-success opacity-50"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 text-muted">Remaining Balance</h6>
                                                <h4 class="mb-0 fw-bold @(Model.RemainingAmount > 0 ? "text-success" : "text-muted")">₹<span id="remainingBalanceDisplay">@Model.RemainingAmount.ToString("F2")</span></h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Payment Method Section -->
                        <h5 class="mb-3 mt-2 fw-semibold">1. Select Payment Method</h5>
                        <div class="mb-4">
                            <div class="payment-method-selector mb-2">
                                <select asp-for="PaymentMethodId" asp-items="Model.AvailablePaymentMethods" class="form-select form-select-lg shadow-sm" id="paymentMethodSelect">
                                    <option value="">-- Select Payment Method --</option>
                                </select>
                                <i class="fas fa-credit-card position-absolute text-primary payment-icon"></i>
                            </div>
                            <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                            <div id="upiReferenceWrapper" class="mt-3" style="display:none;">
                                <label asp-for="UPIReference" class="form-label fw-semibold">UPI Transaction Reference</label>
                                <input asp-for="UPIReference" class="form-control form-control-lg shadow-sm" placeholder="Enter UPI transaction / UTR number" />
                                <span asp-validation-for="UPIReference" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <!-- Discount Section (moved before payment amount) -->
                        <h5 class="mb-3 fw-semibold">2. Discount (Optional)</h5>
                        <div class="mb-4">
                            <div class="d-flex flex-wrap align-items-center gap-3 mb-2">
                                <div class="btn-group" role="group" aria-label="Discount Type">
                                    <input type="radio" class="btn-check" name="discountMode" id="discountModeAmount" value="amount" checked>
                                    <label class="btn btn-outline-secondary" for="discountModeAmount">Amount</label>
                                    <input type="radio" class="btn-check" name="discountMode" id="discountModePercent" value="percent">
                                    <label class="btn btn-outline-secondary" for="discountModePercent">Percent</label>
                                </div>
                                <div class="input-group input-group-lg" style="max-width:320px;">
                                    <span id="discountPrefix" class="input-group-text bg-light fw-bold">₹</span>
                                    <input type="number" min="0" step="0.01" id="discountEntry" class="form-control form-control-lg shadow-sm" placeholder="Enter discount" />
                                </div>
                                <small class="text-muted">Applies to remaining balance; payment amount auto-adjusts.</small>
                            </div>
                            <input type="hidden" asp-for="DiscountAmount" />
                            <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                        </div>

                        <!-- Payment Amount Section (after discount) -->
                        <h5 class="mb-3 fw-semibold">3. Total to Process (Amount customer will pay)</h5>
                        <div class="mb-4">
                            <div class="input-group input-group-lg mb-3">
                                <span class="input-group-text bg-light fw-bold">₹</span>
                                <input asp-for="Amount" class="form-control form-control-lg shadow-sm" placeholder="Enter amount" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <div class="quick-amounts mt-3">
                                <div class="d-flex flex-wrap gap-2">
                                    <button type="button" class="btn btn-outline-primary quick-amount px-3 py-2 rounded-pill" data-amount="@Math.Round(Model.RemainingAmount, 2)">
                                        <i class="fas fa-check-circle me-1"></i> Full Amount (₹@Math.Round(Model.RemainingAmount, 2))
                                    </button>
                                    <button type="button" class="btn btn-outline-primary quick-amount px-3 py-2 rounded-pill" data-amount="@Math.Round(Model.RemainingAmount / 2, 2)">
                                        <i class="fas fa-adjust me-1"></i> Half (₹@Math.Round(Model.RemainingAmount / 2, 2))
                                    </button>
                                </div>
                                <div class="d-flex flex-wrap gap-2 mt-2">
                                    <button type="button" class="btn btn-outline-secondary quick-amount px-3 py-2" data-amount="10.00">₹10.00</button>
                                    <button type="button" class="btn btn-outline-secondary quick-amount px-3 py-2" data-amount="20.00">₹20.00</button>
                                    <button type="button" class="btn btn-outline-secondary quick-amount px-3 py-2" data-amount="50.00">₹50.00</button>
                                    <button type="button" class="btn btn-outline-secondary quick-amount px-3 py-2" data-amount="100.00">₹100.00</button>
                                </div>
                            </div>
                        </div>

                        <!-- Tip Amount Section -->
                        <h5 class="mb-3 fw-semibold">4. Add Tip (Optional)</h5>
                        <div class="mb-4">
                            <div class="input-group input-group-lg mb-3">
                                <span class="input-group-text bg-light fw-bold">₹</span>
                                <input asp-for="TipAmount" class="form-control form-control-lg shadow-sm" placeholder="Tip amount" />
                            </div>
                            <span asp-validation-for="TipAmount" class="text-danger"></span>
                            
                            <div class="tip-suggestions mt-3">
                                <p class="text-muted mb-2">Suggested tip amounts:</p>
                                <div class="d-flex flex-wrap gap-2">
                                    <button type="button" class="btn btn-outline-success quick-tip px-4 py-2 position-relative" data-percent="15">
                                        <span class="fw-bold">15%</span>
                                        <small class="d-block tip-preview" id="tip15"></small>
                                    </button>
                                    <button type="button" class="btn btn-outline-success quick-tip px-4 py-2 position-relative" data-percent="18">
                                        <span class="fw-bold">18%</span>
                                        <small class="d-block tip-preview" id="tip18"></small>
                                    </button>
                                    <button type="button" class="btn btn-outline-success quick-tip px-4 py-2 position-relative" data-percent="20">
                                        <span class="fw-bold">20%</span>
                                        <small class="d-block tip-preview" id="tip20"></small>
                                    </button>
                                    <button type="button" class="btn btn-outline-success quick-tip px-4 py-2 position-relative" data-percent="25">
                                        <span class="fw-bold">25%</span>
                                        <small class="d-block tip-preview" id="tip25"></small>
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary quick-tip px-3 py-2" data-amount="0">No Tip</button>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Card Information Section -->
                        <div id="cardPaymentFields" style="display: none;" class="card bg-light rounded-3 p-3 mb-4">
                            <div class="card-body">
                                <h5 class="mb-3 fw-semibold d-flex align-items-center">
                                    <i class="fas fa-credit-card text-primary me-2"></i>
                                    Card Information
                                </h5>
                                
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <select asp-for="CardType" asp-items="Model.CardTypes" class="form-select shadow-sm" id="cardTypeSelect">
                                                <option value="">-- Select --</option>
                                            </select>
                                            <label asp-for="CardType" class="form-label"></label>
                                            <span asp-validation-for="CardType" class="text-danger"></span>
                                            <div class="invalid-feedback" id="cardTypeFeedback" style="display:none"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="LastFourDigits" class="form-control shadow-sm" maxlength="4" placeholder="Last 4 digits" />
                                            <label asp-for="LastFourDigits" class="form-label"></label>
                                            <span asp-validation-for="LastFourDigits" class="text-danger"></span>
                                            <div class="invalid-feedback" id="last4Feedback" style="display:none"></div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="AuthorizationCode" class="form-control shadow-sm" placeholder="Auth code" />
                                            <label asp-for="AuthorizationCode" class="form-label"></label>
                                            <span asp-validation-for="AuthorizationCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="ReferenceNumber" class="form-control shadow-sm" placeholder="Reference #" />
                                            <label asp-for="ReferenceNumber" class="form-label"></label>
                                            <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="d-flex align-items-center mt-1 mb-1">
                                    <div class="credit-card-icons">
                                        <i class="fab fa-cc-visa fa-2x me-2 text-muted"></i>
                                        <i class="fab fa-cc-mastercard fa-2x me-2 text-muted"></i>
                                        <i class="fab fa-cc-amex fa-2x me-2 text-muted"></i>
                                        <i class="fab fa-cc-discover fa-2x text-muted"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Additional Notes Section -->
                        <h5 class="mb-3 fw-semibold">5. Additional Notes (Optional)</h5>
                        <div class="mb-4">
                            <div class="form-floating">
                                <textarea asp-for="Notes" class="form-control shadow-sm" rows="3" style="min-height: 100px;" placeholder="Enter notes"></textarea>
                                <label asp-for="Notes" class="form-label text-muted"></label>
                            </div>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        
                        <!-- Payment Summary -->
                        <div class="card border-primary mb-4">
                            <div class="card-header bg-primary text-white py-2">
                                <h5 class="mb-0">Payment Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-6">Payment Amount:</div>
                                    <div class="col-6 text-end fw-bold">₹<span id="summaryAmount">0.00</span></div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6">Discount:</div>
                                    <div class="col-6 text-end text-danger">-₹<span id="summaryDiscount">0.00</span></div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6">Tip Amount:</div>
                                    <div class="col-6 text-end">₹<span id="summaryTip">0.00</span></div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6">Roundoff Adjustment:</div>
                                    <div class="col-6 text-end">₹<span id="summaryRoundoff">0.00</span></div>
                                </div>
                                <div class="row">
                                    <div class="col-6"><strong>Total to Process:</strong></div>
                                    <div class="col-6 text-end"><strong>₹<span id="summaryTotal">0.00</span></strong></div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Submit Button -->
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg py-3 rounded-pill shadow">
                                <i class="fas fa-check-circle me-2"></i> Process Payment
                            </button>
                        </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="splitPane" role="tabpanel" aria-labelledby="split-tab">
                    <div class="card mb-4 shadow-sm border-0 rounded-3">
                        <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                            <h4 class="mb-0 fw-bold text-primary">Split Payment</h4>
                            <small class="text-muted">Order #@Model.OrderNumber</small>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="ProcessSplitPayments" method="post" id="splitPaymentForm">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="OrderId" value="@Model.OrderId" />
                                <input type="hidden" name="OrderNumber" value="@Model.OrderNumber" />
                                <input type="hidden" name="Subtotal" value="@Model.Subtotal" />
                                <input type="hidden" name="GSTPercentage" value="@Model.GSTPercentage" />
                                <input type="hidden" name="RemainingAmount" value="@Model.RemainingAmount" />

                                <!-- Summary -->
                                <div class="card mb-3 bg-light">
                                    <div class="card-body p-3">
                                        <div class="row align-items-center">
                                            <div class="col-md-4">
                                                <div class="text-muted">Order Total</div>
                                                <div class="h5 fw-bold">₹@Model.TotalAmount.ToString("F2")</div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="text-muted">Target to Collect (rounded)</div>
                                                <div class="h5 fw-bold text-success">₹<span id="splitRemainingDisplay">@Model.RemainingAmount.ToString("F2")</span></div>
                                            </div>
                                            <div class="col-md-4 text-end">
                                                <button type="button" class="btn btn-outline-primary" id="addSplitRow"><i class="fas fa-plus"></i> Add Payment Line</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Discount on order (optional) -->
                                <h5 class="mb-3 fw-semibold">Discount (Optional)</h5>
                                <div class="d-flex flex-wrap align-items-center gap-3 mb-3">
                                    <div class="btn-group" role="group" aria-label="Discount Type">
                                        <input type="radio" class="btn-check" name="DiscountType" id="splitDiscAmount" value="amount" checked>
                                        <label class="btn btn-outline-secondary" for="splitDiscAmount">Amount</label>
                                        <input type="radio" class="btn-check" name="DiscountType" id="splitDiscPercent" value="percent">
                                        <label class="btn btn-outline-secondary" for="splitDiscPercent">Percent</label>
                                    </div>
                                    <div class="input-group input-group-lg" style="max-width:320px;">
                                        <span id="splitDiscountPrefix" class="input-group-text bg-light fw-bold">₹</span>
                                        <input type="number" min="0" step="0.01" name="DiscountAmount" id="splitDiscountEntry" class="form-control form-control-lg shadow-sm" placeholder="Enter discount" />
                                    </div>
                                    <small class="text-muted">Applied once on subtotal; GST recalculated (existing flow).</small>
                                </div>

                                <!-- Split lines table -->
                                <div class="table-responsive mb-3">
                                    <table class="table table-bordered align-middle" id="splitTable">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width:28%">Payment Method</th>
                                                <th style="width:18%">Amount (₹)</th>
                                                <th style="width:14%">Tip (₹)</th>
                                                <th>Ref / Last4 / Card Type</th>
                                                <th style="width:8%"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th class="text-end">Total</th>
                                                <th class="text-end">₹<span id="splitTotalAmount">0.00</span></th>
                                                <th class="text-end">₹<span id="splitTotalTip">0.00</span></th>
                                                <th colspan="2" class="text-end"><span class="text-muted">Must equal Remaining within ₹0.50</span></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>

                                <div class="d-grid gap-2 mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg py-3 rounded-pill shadow">
                                        <i class="fas fa-check-circle me-2"></i> Process Split Payments
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // --- Split payments UI ---
            const paymentMethods = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.AvailablePaymentMethods.Select(m => new { value = m.Value, text = m.Text })));
            function newRowHtml(index){
                const options = paymentMethods.map(pm => `<option value="${pm.value}">${pm.text}</option>`).join('');
                return `
                <tr>
                    <td>
                        <select name="Items[${index}].PaymentMethodId" class="form-select form-select-sm split-method">
                            <option value="">-- Select --</option>
                            ${options}
                        </select>
                    </td>
                    <td>
                        <input name="Items[${index}].Amount" type="number" min="0.01" step="0.01" class="form-control form-control-sm split-amount" />
                        <input name="Items[${index}].OriginalAmount" type="hidden" class="split-original" />
                        <input name="Items[${index}].RoundoffAdjustmentAmt" type="hidden" class="split-roundoff" />
                    </td>
                    <td>
                        <input name="Items[${index}].TipAmount" type="number" min="0" step="0.01" class="form-control form-control-sm split-tip" />
                    </td>
                    <td>
                        <div class="row g-1">
                            <div class="col-md-4">
                                <input name="Items[${index}].UPIReference" placeholder="UPI Ref/Ref#" class="form-control form-control-sm split-upi" />
                            </div>
                            <div class="col-md-3">
                                <input name="Items[${index}].LastFourDigits" maxlength="4" placeholder="Last 4" class="form-control form-control-sm split-last4" />
                            </div>
                            <div class="col-md-5">
                                <select name="Items[${index}].CardType" class="form-select form-select-sm">
                                    <option value="">Card Type</option>
                                    <option value="VISA">Visa</option>
                                    <option value="MASTERCARD">MasterCard</option>
                                    <option value="AMEX">American Express</option>
                                    <option value="DISCOVER">Discover</option>
                                    <option value="OTHER">Other</option>
                                </select>
                            </div>
                        </div>
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-outline-danger btn-sm remove-row"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>`;
            }

            function recalcSplitTotals(){
                let amt = 0, tip = 0;
                $('#splitTable tbody tr').each(function(){
                    const a = parseFloat($(this).find('.split-amount').val()) || 0;
                    const t = parseFloat($(this).find('.split-tip').val()) || 0;
                    amt += a; tip += t;
                });
                $('#splitTotalAmount').text(amt.toFixed(2));
                $('#splitTotalTip').text(tip.toFixed(2));
            }

            function computeSplitTarget(){
                // Use same math as single-payment: subtotal -> discount -> GST -> minus alreadyPaid, then round to rupee for display
                var baseSubtotal = parseFloat($('#Subtotal').val()) || 0;
                var gstPerc = parseFloat($('#GSTPercentage').val()) || 0;
                var mode = $('input[name="DiscountType"]:checked').val() || 'amount';
                var entry = parseFloat($('#splitDiscountEntry').val());
                if (isNaN(entry) || entry < 0) entry = 0;
                var discountAmt = 0;
                if (mode === 'percent') { if (entry > 100) entry = 100; discountAmt = baseSubtotal * (entry/100.0); }
                else { discountAmt = entry; }
                if (discountAmt > baseSubtotal) discountAmt = baseSubtotal;
                var discountedSubtotal = baseSubtotal - discountAmt;
                var gstAmount = roundAway(discountedSubtotal * gstPerc / 100.0, 2);
                var preRoundTotal = roundMoney(discountedSubtotal + gstAmount);
                var newRemaining = Math.max(0, preRoundTotal - alreadyPaid);
                var displayTarget = roundHalfUp(newRemaining);
                $('#splitRemainingDisplay').text(displayTarget.toFixed(2));
                return { target: displayTarget, preRound: newRemaining };
            }

            function rebalanceRows(){
                const calc = computeSplitTarget();
                const target = calc.target;
                let rows = $('#splitTable tbody tr');
                if (rows.length === 0) return;
                let sumExceptLast = 0;
                rows.slice(0, -1).each(function(){
                    const v = parseFloat($(this).find('.split-amount').val()) || 0;
                    sumExceptLast += v;
                });
                let lastAmt = Math.max(0, target - sumExceptLast);
                rows.last().find('.split-amount').val(lastAmt.toFixed(2));
                recalcSplitTotals();
            }

            let splitIndex = 0;
            $('#addSplitRow').on('click', function(){
                $('#splitTable tbody').append(newRowHtml(splitIndex++));
                const calc = computeSplitTarget();
                let rows = $('#splitTable tbody tr');
                if (rows.length === 1) {
                    rows.last().find('.split-amount').val(calc.target.toFixed(2));
                } else {
                    rebalanceRows();
                }
                recalcSplitTotals();
            });
            // When non-last row amount changes, auto-balance the last row
            $('#splitTable').on('input', '.split-amount', function(){
                const rows = $('#splitTable tbody tr');
                const isLast = $(this).closest('tr')[0] === rows.last()[0];
                if (!isLast) { rebalanceRows(); }
                recalcSplitTotals();
            });
            $('#splitTable').on('input', '.split-tip', recalcSplitTotals);
            $('#splitTable').on('click', '.remove-row', function(){
                $(this).closest('tr').remove();
                recalcSplitTotals();
                rebalanceRows();
            });

            // Discount prefix toggle
            $('input[name="DiscountType"]').change(function(){
                if ($('#splitDiscPercent').is(':checked')) $('#splitDiscountPrefix').text('%'); else $('#splitDiscountPrefix').text('₹');
                rebalanceRows();
            });
            $('#splitDiscountEntry').on('input', function(){ rebalanceRows(); });

            // Initialize with one row and auto amount on first load of split tab
            setTimeout(function(){
                // Seed discount on split tab from server-provided discount, if any
                var serverDisc = parseFloat('@Model.DiscountAmount');
                if (!isNaN(serverDisc) && serverDisc > 0 && !$('#splitDiscountEntry').val()) {
                    $('#splitDiscountEntry').val(serverDisc.toFixed(2));
                }
                if ($('#splitTable tbody tr').length === 0) { $('#addSplitRow').click(); }
            }, 0);

            // Update payment summary when page loads
            // If server provided a pending discount (from Payment page), seed the entry field
            var initialServerDiscount = parseFloat($('#DiscountAmount').val()) || 0;
            if ((($('#discountEntry').val() || '').trim() === '') && initialServerDiscount > 0) {
                $('#discountEntry').val(initialServerDiscount.toFixed(2));
            }
            // Initial computations
            updatePaymentSummary();
            calculateTipPreviews();
            // Ensure split header target reflects same calculation at load as single tab
            if ($('#splitPane').length) { setTimeout(function(){ if (typeof computeSplitTarget === 'function') computeSplitTarget(); }, 0); }
            
            // Show/hide card payment fields & UPI reference based on payment method
            $('#paymentMethodSelect').change(function() {
                var selectedOption = $(this).find('option:selected');
                var requiresCardInfo = false;
                var text = selectedOption.text().toLowerCase();
                
                // Update card type icon
                if ($(this).val()) {
                    $('.payment-icon').addClass('text-primary');
                } else {
                    $('.payment-icon').removeClass('text-primary');
                }
                
                // Handle Complementary payment method (automatic 100% discount)
                if (text.includes('complementary')) {
                    // Select percent mode and set to 100%
                    $('#discountModePercent').prop('checked', true);
                    $('#discountPrefix').text('%');
                    $('#discountEntry').val('100');
                    
                    // Force recalculation of discount and amount
                    recalcDiscountAndAmount();
                    
                    // Hide card fields
                    $('#cardPaymentFields').hide();
                    $('#upiReferenceWrapper').hide();
                    $('#UPIReference').val('');
                    
                    return; // Skip the AJAX call
                }
                
                // Handle UPI reference field
                if (text.includes('upi')) {
                    $('#upiReferenceWrapper').slideDown(200);
                } else {
                    $('#upiReferenceWrapper').slideUp(200);
                    $('#UPIReference').val('');
                }
                
                // Immediately show card fields for card payments without waiting for AJAX
                var paymentMethodText = selectedOption.text().toLowerCase();
                if (paymentMethodText.includes('card') || paymentMethodText.includes('credit') || paymentMethodText.includes('debit')) {
                    $('#cardPaymentFields').show(); // Show immediately
                    
                    // Still make the AJAX call to get additional details, but don't wait for it to show the fields
                    $.ajax({
                        url: '/Payment/GetPaymentMethodDetails',
                        type: 'GET',
                        data: { id: $(this).val() },
                        success: function(data) {
                            // Update card icons based on card type if available
                            if (data && data.cardTypes) {
                                highlightCardIcons(data.cardTypes);
                            }
                        }
                    });
                } else {
                    // For non-card methods, hide card fields
                    $('#cardPaymentFields').hide();
                    // Clear any client-side validation state when card fields are hidden
                    $('#cardTypeSelect, #LastFourDigits').removeClass('is-invalid');
                    $('#cardTypeFeedback').text('').hide();
                    $('#last4Feedback').text('').hide();
                    
                    // Only make AJAX call if not a card and not complementary
                    $.ajax({
                        url: '/Payment/GetPaymentMethodDetails',
                        type: 'GET',
                        data: { id: $(this).val() },
                        success: function(data) {
                            // In case the API indicates it requires card info
                            if (data && data.requiresCardInfo) {
                                $('#cardPaymentFields').show();
                                
                                // Update card icons based on card type if available
                                if (data.cardTypes) {
                                    highlightCardIcons(data.cardTypes);
                                }
                            }
                        }
                    });
                }
            });
            
            // Quick amount buttons
            $('.quick-amount').click(function() {
                var amount = $(this).data('amount');
                $('#Amount').val(amount.toFixed(2));
                manualAmountOverride = true;
                
                // Visual feedback
                $('.quick-amount').removeClass('active');
                $(this).addClass('active');
                
                // Recalculate tip previews
                calculateTipPreviews();
                
                // Update payment summary
                updatePaymentSummary();
            });
            
            // Quick tip buttons
            $('.quick-tip').click(function() {
                var amount = parseFloat($('#Amount').val()) || 0;
                
                // Visual feedback
                $('.quick-tip').removeClass('active');
                $(this).addClass('active');
                
                if ($(this).data('percent')) {
                    var percent = $(this).data('percent');
                    var tipAmount = amount * (percent / 100);
                    $('#TipAmount').val(tipAmount.toFixed(2));
                } else {
                    $('#TipAmount').val($(this).data('amount').toFixed(2));
                }
                
                // Update payment summary
                updatePaymentSummary();
            });
            
            // Update payment summary when amount or tip changes
            $('#Amount, #TipAmount, #DiscountAmount').on('input', function() {
                updatePaymentSummary();
                
                // Recalculate tip previews if amount changed
                if ($(this).attr('id') === 'Amount') {
                    calculateTipPreviews();
                }
            });
            
            // Calculate and display tip percentages
            function calculateTipPreviews() {
                var amount = parseFloat($('#Amount').val()) || 0;
                
                if (amount > 0) {
                    $('#tip15').text('₹' + (amount * 0.15).toFixed(2));
                    $('#tip18').text('₹' + (amount * 0.18).toFixed(2));
                    $('#tip20').text('₹' + (amount * 0.20).toFixed(2));
                    $('#tip25').text('₹' + (amount * 0.25).toFixed(2));
                    $('.tip-preview').show();
                } else {
                    $('.tip-preview').hide();
                }
            }
            
            // Track original remaining and paid; we'll recompute remaining after discount using the same
            // rounding rules as the Payment page (subtotal -> discount -> GST -> tip -> round to whole rupee)
            var originalRemaining = parseFloat('@Model.RemainingAmount');
            var modelOrderTotal = parseFloat('@Model.TotalAmount');
            var alreadyPaid = Math.max(0, +(modelOrderTotal - originalRemaining));
            var manualAmountOverride = false;

            $('#Amount').on('input', function(){
                manualAmountOverride = true;
                updatePaymentSummary();
                calculateTipPreviews();
            });

            // Consistent rounding helpers (match Payment/Index page)
            function roundMoney(val) { return Math.round((val + (val >= 0 ? 0.0000001 : -0.0000001)) * 100) / 100; }
            function roundAway(val, digits) { const m = Math.pow(10, digits); return Math.round(val * m + (val >= 0 ? 0.0000001 : -0.0000001)) / m; }
            function roundHalfUp(val) {
                // Nearest rupee, half-away-from-zero. Integers remain unchanged.
                if (!isFinite(val)) return 0;
                return (val >= 0) ? Math.floor(val + 0.5) : Math.ceil(val - 0.5);
            }

            // Recompute totals from Subtotal -> Discount -> GST -> Tip; then compute remaining by subtracting paid
            function updatePaymentSummary() {
                var baseSubtotal = parseFloat($('#Subtotal').val()) || 0; // pre-GST base
                var gstPerc = parseFloat($('#GSTPercentage').val()) || 0;
                var discount = parseFloat($('#DiscountAmount').val()) || 0; // discount on subtotal
                var tip = parseFloat($('#TipAmount').val()) || 0;

                var discountedSubtotal = baseSubtotal - discount; if (discountedSubtotal < 0) discountedSubtotal = 0;
                var gstAmount = roundAway(discountedSubtotal * gstPerc / 100.0, 2);
                var preRoundTotal = roundMoney(discountedSubtotal + gstAmount + tip);

                // Remaining after considering previous payments
                var newRemaining = Math.max(0, preRoundTotal - alreadyPaid);

                // Display amount (Total to Process) rounds to whole rupee unless user overrides
                var displayedAmount = parseFloat($('#Amount').val());
                if (!manualAmountOverride) {
                    displayedAmount = roundHalfUp(newRemaining);
                    $('#Amount').val(displayedAmount.toFixed(2));
                } else {
                    if (isNaN(displayedAmount)) displayedAmount = roundHalfUp(newRemaining);
                }
                var roundoff = roundMoney(displayedAmount - newRemaining);

                // Update hidden fields for server
                $('#OriginalAmount').val(newRemaining.toFixed(2));
                $('#RoundoffAdjustmentAmt').val(roundoff.toFixed(2));

                // Update summary spans (numbers only; currency symbol is outside)
                $('#summaryAmount').text(newRemaining.toFixed(2));
                $('#summaryTip').text(tip.toFixed(2));
                $('#summaryDiscount').text(discount.toFixed(2));
                $('#summaryRoundoff').text(roundoff.toFixed(2));
                $('#summaryTotal').text(displayedAmount.toFixed(2));

                // Reflect discount on header cards
                $('#orderTotalDisplay').text(preRoundTotal.toFixed(2));
                $('#remainingBalanceDisplay').text(newRemaining.toFixed(2));
            }

            function recalcDiscountAndAmount(){
                var baseSubtotal = parseFloat($('#Subtotal').val()) || 0; // pre-GST base
                var gstPerc = parseFloat($('#GSTPercentage').val()) || 0;
                var mode = $('input[name=discountMode]:checked').val();
                var entry = parseFloat($('#discountEntry').val());
                if (isNaN(entry) || entry < 0) entry = 0;
                var discountAmt = 0;
                if (mode === 'percent') { if (entry > 100) entry = 100; discountAmt = baseSubtotal * (entry / 100.0); }
                else { discountAmt = entry; }
                if (discountAmt > baseSubtotal) discountAmt = baseSubtotal;
                $('#DiscountAmount').val(roundMoney(discountAmt).toFixed(2));
                // Recompute summary and header
                manualAmountOverride = false; // reset when discount changes
                updatePaymentSummary();
                calculateTipPreviews();
            }

            $('#discountEntry').on('input', recalcDiscountAndAmount);
            $('input[name=discountMode]').change(function(){
                manualAmountOverride = false; // reset override on mode change
                if ($(this).val() === 'percent') {
                    $('#discountPrefix').text('%');
                } else {
                    $('#discountPrefix').text('₹');
                }
                recalcDiscountAndAmount();
            });
            // initial
            recalcDiscountAndAmount();
            
            // Highlight relevant card icons
            function highlightCardIcons(cardTypes) {
                $('.fab.fa-cc-visa, .fab.fa-cc-mastercard, .fab.fa-cc-amex, .fab.fa-cc-discover').addClass('text-muted').removeClass('text-primary');
                
                if (Array.isArray(cardTypes)) {
                    cardTypes.forEach(function(type) {
                        var cardType = type.toLowerCase();
                        if (cardType.includes('visa')) $('.fab.fa-cc-visa').addClass('text-primary').removeClass('text-muted');
                        if (cardType.includes('master')) $('.fab.fa-cc-mastercard').addClass('text-primary').removeClass('text-muted');
                        if (cardType.includes('amex') || cardType.includes('american')) $('.fab.fa-cc-amex').addClass('text-primary').removeClass('text-muted');
                        if (cardType.includes('discover')) $('.fab.fa-cc-discover').addClass('text-primary').removeClass('text-muted');
                    });
                }
            }
            
            // Apply floating label styling fix
            $('.form-floating input, .form-floating select').on('focus blur', function(e) {
                $(this).parents('.form-floating').toggleClass('focused', e.type === 'focus' || this.value.length > 0);
            }).trigger('blur');

            // Client-side validation: require card info when payment method is Card/Credit/Debit
            $('#processPaymentForm').on('submit', function(e) {
                // Ensure roundoff and summary values are fresh before any validation/submission
                updatePaymentSummary();
                // Determine selected payment method text
                var pmText = $('#paymentMethodSelect option:selected').text().toLowerCase();
                var requiresCard = pmText.includes('card') || pmText.includes('credit') || pmText.includes('debit');

                // Remove any previous client errors / feedback
                $('#cardTypeSelect, #LastFourDigits').removeClass('is-invalid');
                $('#cardTypeFeedback').text('').hide();
                $('#last4Feedback').text('').hide();

                if (requiresCard) {
                    var cardType = $('#cardTypeSelect').val();
                    var last4 = ($('#LastFourDigits').val() || '').trim();
                    var invalid = false;

                    if (!cardType) {
                        invalid = true;
                        $('#cardTypeSelect').addClass('is-invalid');
                        $('#cardTypeFeedback').text('Card type is required for card payments.').show();
                    }

                    if (!last4) {
                        invalid = true;
                        $('#LastFourDigits').addClass('is-invalid');
                        $('#last4Feedback').text('Card number (last 4 digits) is required for card payments.').show();
                    } else if (!/^\d{4}$/.test(last4)) {
                        invalid = true;
                        $('#LastFourDigits').addClass('is-invalid');
                        $('#last4Feedback').text('Please enter exactly 4 numeric digits.').show();
                    }

                    if (invalid) {
                        // Prevent form submission
                        e.preventDefault();
                        // Scroll to first visible invalid-feedback for better UX
                        var $firstFeedback = $('.invalid-feedback:visible').first();
                        if ($firstFeedback.length) {
                            $('html, body').animate({ scrollTop: $firstFeedback.offset().top - 100 }, 250);
                        }
                        return false;
                    }
                }
            });

            // Before submitting split form, validate and distribute Original and Roundoff so DB stores canonical amounts
            $('#splitPaymentForm').on('submit', function(e){
                const rows = $('#splitTable tbody tr');
                if (rows.length === 0) {
                    e.preventDefault();
                    alert('Add at least one payment line.');
                    return false;
                }
                // Basic client validation
                let totalEntered = 0;
                let anyInvalid = false;
                let cardValidationErrors = [];
                rows.each(function(idx){
                    const $row = $(this);
                    const pm = ($row.find('select.split-method').val() || '').trim();
                    const amt = parseFloat($row.find('.split-amount').val());
                    if (!pm) { anyInvalid = true; $row.find('select.split-method').addClass('is-invalid'); }
                    else { $row.find('select.split-method').removeClass('is-invalid'); }
                    if (isNaN(amt) || amt <= 0) { anyInvalid = true; $row.find('.split-amount').addClass('is-invalid'); }
                    else { $row.find('.split-amount').removeClass('is-invalid'); }
                    totalEntered += isNaN(amt) ? 0 : amt;
                    
                    // Check card fields for card payment methods
                    if (pm) {
                        const pmText = $row.find('select.split-method option:selected').text().toLowerCase();
                        const isCard = pmText.includes('card') || pmText.includes('credit') || pmText.includes('debit');
                        if (isCard) {
                            const last4 = ($row.find('.split-last4').val() || '').trim();
                            const cardType = ($row.find('select[name$=".CardType"]').val() || '').trim();
                            if (!last4 || last4.length !== 4) {
                                anyInvalid = true;
                                $row.find('.split-last4').addClass('is-invalid');
                                cardValidationErrors.push(`Row ${idx + 1}: Last 4 digits required for card payment`);
                            } else {
                                $row.find('.split-last4').removeClass('is-invalid');
                            }
                            if (!cardType) {
                                anyInvalid = true;
                                $row.find('select[name$=".CardType"]').addClass('is-invalid');
                                cardValidationErrors.push(`Row ${idx + 1}: Card type required for card payment`);
                            } else {
                                $row.find('select[name$=".CardType"]').removeClass('is-invalid');
                            }
                        }
                    }
                });
                const calc = computeSplitTarget();
                const preRound = calc.preRound;
                const target = calc.target;
                const tol = 0.50;
                if (anyInvalid) {
                    e.preventDefault();
                    if (cardValidationErrors.length > 0) {
                        alert('Card payment validation errors:\n' + cardValidationErrors.join('\n'));
                    } else {
                        alert('Please select payment method and enter a positive amount for each line.');
                    }
                    return false;
                }
                if (Math.abs(totalEntered - target) > tol) {
                    e.preventDefault();
                    alert(`Split total (₹${totalEntered.toFixed(2)}) must equal target (₹${target.toFixed(2)}) within ₹${tol.toFixed(2)}.`);
                    return false;
                }
                // Distribute Original and Roundoff
                const totalRoundoff = Math.round((target - preRound) * 100) / 100;
                rows.each(function(){
                    const amt = parseFloat($(this).find('.split-amount').val()) || 0;
                    $(this).find('.split-original').val(amt.toFixed(2));
                    $(this).find('.split-roundoff').val('0.00');
                });
                if (rows.length > 0) {
                    const last = rows.last();
                    const lastAmt = parseFloat(last.find('.split-amount').val()) || 0;
                    const adjustedOriginal = Math.round((lastAmt - totalRoundoff) * 100) / 100;
                    last.find('.split-original').val(adjustedOriginal.toFixed(2));
                    last.find('.split-roundoff').val(totalRoundoff.toFixed(2));
                }
            });
        });
    </script>
}
