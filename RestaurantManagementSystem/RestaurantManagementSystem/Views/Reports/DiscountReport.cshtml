@model RestaurantManagementSystem.Models.DiscountReportViewModel
@{
    ViewData["Title"] = "Discount Report";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between">
        <h5 class="mb-0"><i class="fas fa-percentage me-2"></i>Discount Report</h5>
    </div>
    <div class="card-body">
        <form asp-action="DiscountReport" method="post" class="row g-3 mb-3">
            <div class="col-md-3">
                <label asp-for="Filter.StartDate" class="form-label"></label>
                <input asp-for="Filter.StartDate" class="form-control" type="date" />
            </div>
            <div class="col-md-3">
                <label asp-for="Filter.EndDate" class="form-label"></label>
                <input asp-for="Filter.EndDate" class="form-control" type="date" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-success me-2"><i class="fas fa-sync-alt me-1"></i>Refresh</button>
                <button type="button" id="exportCsvBtn" class="btn btn-outline-secondary"><i class="fas fa-file-csv me-1"></i>CSV</button>
            </div>
        </form>

        <style>
            /* Small, report-specific tile styles to add color and contrast */
            .report-tile { padding: 1.1rem; border-radius: .6rem; box-shadow: 0 2px 6px rgba(0,0,0,0.06); }
            .report-tile .label { opacity: .9; font-size: .85rem; }
            .report-tile .value { font-weight: 700; }
        </style>

        <div class="row mb-4">
            <div class="col-md-2 mb-3">
                <div class="report-tile bg-primary text-white">
                    <div class="label">Discounted Orders</div>
                    <div class="value display-6">@Model.Summary.TotalDiscountedOrders</div>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <div class="report-tile bg-success text-white">
                    <div class="label">Total Discount</div>
                    <div class="value display-6">₹@Model.Summary.TotalDiscountAmount.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <div class="report-tile bg-warning text-dark">
                    <div class="label">Avg Discount</div>
                    <div class="value display-6">₹@Model.Summary.AvgDiscountPerOrder.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <div class="report-tile bg-danger text-white">
                    <div class="label">Max Discount</div>
                    <div class="value display-6">₹@Model.Summary.MaxDiscount.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <div class="report-tile bg-info text-dark">
                    <div class="label">Gross Before</div>
                    <div class="value display-6">₹@Model.Summary.TotalGrossBeforeDiscount.ToString("N0")</div>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <div class="report-tile bg-secondary text-white">
                    <div class="label">Discount % Gross</div>
                    <div class="value display-6">@Model.Summary.DiscountPercentageOfGross.ToString("N2")%</div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="discountReportTable">
                <thead class="table-light">
                    <tr>
                        <th>Date/Time</th>
                        <th>Order #</th>
                        <th>Server</th>
                        <th class="text-end">Gross</th>
                        <th class="text-end text-danger">Discount</th>
                        <th class="text-end">Net</th>
                        <th class="text-end">Tip</th>
                        <th class="text-end">Status</th>
                    </tr>
                </thead>
                <tbody>
                @if (!Model.Rows.Any())
                {
                    <tr><td colspan="8" class="text-center text-muted">No discounted orders in range.</td></tr>
                }
                else
                {
                    foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@row.CreatedAtFormatted</td>
                            <td><a asp-controller="Order" asp-action="Details" asp-route-id="@row.OrderId">@row.OrderNumber</a></td>
                            <td>@row.ServerDisplay</td>
                            <td class="text-end">₹@row.GrossAmount.ToString("N2")</td>
                            <td class="text-end text-danger">-₹@row.DiscountAmount.ToString("N2")</td>
                            <td class="text-end fw-semibold">₹@row.TotalAmount.ToString("N2")</td>
                            <td class="text-end">₹@row.TipAmount.ToString("N2")</td>
                            <td class="text-end">@row.Status</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('exportCsvBtn').addEventListener('click', function () {
            const rows = Array.from(document.querySelectorAll('#discountReportTable tr'));
            const csv = rows.map(r => Array.from(r.children).map(c => '"' + c.innerText.replace(/"/g,'""') + '"').join(',')).join('\n');
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'discount_report.csv';
            a.click();
            URL.revokeObjectURL(url);
        });
    </script>
}
