@model RestaurantManagementSystem.Models.SalesReportViewModel
@using RestaurantManagementSystem.Models.Authorization
@{
    ViewData["Title"] = "Sales Reports";
    var reportPermissions = ViewBag.ReportPermissions as PermissionSet ?? new PermissionSet();
}

<style>
    .report-header-gradient {
        background: linear-gradient(135deg, #16a34a 0%, #22c55e 50%, #4ade80 100%);
        padding: 1.5rem;
        border-radius: 0.5rem 0.5rem 0 0;
        color: white;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
    .report-header-gradient h4 {
        font-weight: 700;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    }
    .report-header-gradient .subtitle {
        opacity: 0.95;
        font-size: 0.95rem;
        margin-top: 0.25rem;
    }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 mb-0">
                    <i class="fas fa-chart-line text-success me-2"></i>
                    Sales Analytics & Reports
                </h2>
                @if (reportPermissions.CanExport)
                {
                    <div class="btn-group">
                        <button class="btn btn-outline-success" onclick="exportToPDF()">
                            <i class="fas fa-file-pdf me-2"></i>Export PDF
                        </button>
                        <button class="btn btn-success" onclick="exportToExcel()">
                            <i class="fas fa-file-excel me-2"></i>Export Excel
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-filter me-2"></i>Report Filters
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Sales" id="filterForm">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label asp-for="Filter.StartDate" class="form-label">From Date</label>
                                <input asp-for="Filter.StartDate" class="form-control" type="date" />
                                <span asp-validation-for="Filter.StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Filter.EndDate" class="form-label">To Date</label>
                                <input asp-for="Filter.EndDate" class="form-control" type="date" />
                                <span asp-validation-for="Filter.EndDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Filter.UserId" class="form-label">Server/User</label>
                                <select asp-for="Filter.UserId" class="form-select">
                                    <option value="">All Servers</option>
                                    @foreach (var user in Model.AvailableUsers)
                                    {
                                        <option value="@user.Id">@user.DisplayName</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search me-2"></i>Generate Report
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-gradient-success text-white">
                <div class="card-body text-center">
                    <i class="fas fa-rupee-sign fa-2x mb-3"></i>
                    <h4 class="card-title">₹@Model.Summary.TotalSales.ToString("N2")</h4>
                    <p class="card-text mb-0 opacity-75">Total Sales</p>
                    <small class="opacity-75">
                        Completion Rate: @Model.Summary.CompletionRate.ToString("F1")%
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-gradient-primary text-white">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart fa-2x mb-3"></i>
                    <h4 class="card-title">@Model.Summary.TotalOrders</h4>
                    <p class="card-text mb-0 opacity-75">Total Orders</p>
                    <small class="opacity-75">
                        Completed: @Model.Summary.CompletedOrders
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-gradient-info text-white">
                <div class="card-body text-center">
                    <i class="fas fa-calculator fa-2x mb-3"></i>
                    <h4 class="card-title">₹@Model.Summary.AverageOrderValue.ToString("N2")</h4>
                    <p class="card-text mb-0 opacity-75">Average Order</p>
                    <small class="opacity-75">
                        Tax: ₹@Model.Summary.TotalTax.ToString("N2")
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-gradient-warning text-white">
                <div class="card-body text-center">
                    <i class="fas fa-hand-holding-usd fa-2x mb-3"></i>
                    <h4 class="card-title">₹@Model.Summary.TotalTips.ToString("N2")</h4>
                    <p class="card-text mb-0 opacity-75">Total Tips</p>
                    <small class="opacity-75">
                        Discounts: ₹@Model.Summary.TotalDiscounts.ToString("N2")
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Listing Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="report-header-gradient">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h4><i class="fas fa-list-alt me-2"></i>Sales Order Listing</h4>
                            <div class="subtitle">Detailed breakdown of all orders in selected period</div>
                        </div>
                        <div class="text-end">
                            <i class="fas fa-file-invoice-dollar fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="alert alert-success mb-0 flex-grow-1 me-3">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Formula:</strong> Net Amount = Bill Value - Discount Amount | 
                            <strong>Bill Value:</strong> Subtotal before discount | 
                            <strong>Total:</strong> Net Amount + Tax + Tip
                        </div>
                        @if (reportPermissions.CanExport)
                        {
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-success" onclick="exportOrderListingToCSV()">
                                    <i class="fas fa-file-csv me-1"></i>CSV
                                </button>
                                <button type="button" class="btn btn-outline-danger" onclick="exportOrderListingToPDF()">
                                    <i class="fas fa-file-pdf me-1"></i>PDF
                                </button>
                            </div>
                        }
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm" id="orderListingTable">
                            <thead class="table-success">
                                <tr>
                                    <th>Date/Time</th>
                                    <th>Order No</th>
                                    <th>Server</th>
                                    <th class="text-end">Bill Value</th>
                                    <th class="text-end text-danger">Discount</th>
                                    <th class="text-end text-success fw-bold">Net Amount</th>
                                    <th class="text-end">Tax</th>
                                    <th class="text-end">Tip</th>
                                    <th class="text-end">Total</th>
                                    <th class="text-center">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                            @if (!Model.OrderListing.Any())
                            {
                                <tr><td colspan="10" class="text-center text-muted py-4"><i class="fas fa-inbox me-2"></i>No orders found in the selected date range.</td></tr>
                            }
                            else
                            {
                                foreach (var order in Model.OrderListing)
                                {
                                    <tr>
                                        <td class="text-nowrap">@(order.CreatedAtFormatted)</td>
                                        <td><a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId" class="text-decoration-none">@order.OrderNumber</a></td>
                                        <td>@order.ServerName</td>
                                        <td class="text-end">₹@(order.BillValue.ToString("N2"))</td>
                                        <td class="text-end text-danger">
                                            @if (order.DiscountAmount > 0)
                                            {
                                                <span class="fw-bold">₹@(order.DiscountAmount.ToString("N2"))</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-end text-success fw-bold">₹@(order.NetAmount.ToString("N2"))</td>
                                        <td class="text-end">₹@(order.TaxAmount.ToString("N2"))</td>
                                        <td class="text-end">
                                            @if (order.TipAmount > 0)
                                            {
                                                <span>₹@(order.TipAmount.ToString("N2"))</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-end fw-semibold">₹@(order.TotalAmount.ToString("N2"))</td>
                                        <td class="text-center">
                                            @if (order.StatusText == "Paid")
                                            {
                                                <span class="badge bg-success">Paid</span>
                                            }
                                            else if (order.StatusText == "Pending")
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                            else if (order.StatusText == "Completed")
                                            {
                                                <span class="badge bg-info text-white">Completed</span>
                                            }
                                            else if (order.StatusText == "Cancelled")
                                            {
                                                <span class="badge bg-danger">Cancelled</span>
                                            }
                                            else if (order.StatusText == "Refunded")
                                            {
                                                <span class="badge bg-secondary">Refunded</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@order.StatusText</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            </tbody>
                            @if (Model.OrderListing.Any())
                            {
                                <tfoot class="table-light fw-bold">
                                    <tr>
                                        <td colspan="3" class="text-end">TOTAL:</td>
                                        <td class="text-end">₹@(Model.OrderListing.Sum(o => o.BillValue).ToString("N2"))</td>
                                        <td class="text-end text-danger">₹@(Model.OrderListing.Sum(o => o.DiscountAmount).ToString("N2"))</td>
                                        <td class="text-end text-success">₹@(Model.OrderListing.Sum(o => o.NetAmount).ToString("N2"))</td>
                                        <td class="text-end">₹@(Model.OrderListing.Sum(o => o.TaxAmount).ToString("N2"))</td>
                                        <td class="text-end">₹@(Model.OrderListing.Sum(o => o.TipAmount).ToString("N2"))</td>
                                        <td class="text-end">₹@(Model.OrderListing.Sum(o => o.TotalAmount).ToString("N2"))</td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Tables Row -->
    <div class="row mb-4">
        <div class="col-md-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-area me-2"></i>Daily Sales Trend
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.DailySales.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Orders</th>
                                        <th>Sales</th>
                                        <th>Avg Order</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var day in Model.DailySales.Take(7))
                                    {
                                        <tr>
                                            <td>@day.SalesDateFormatted</td>
                                            <td><span class="badge bg-primary">@day.OrderCount</span></td>
                                            <td class="fw-bold text-success">₹@day.DailySales.ToString("N2")</td>
                                            <td>₹@day.AvgOrderValue.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-5">
                            <i class="fas fa-chart-line fa-3x mb-3 d-block"></i>
                            No sales data available for the selected period
                        </p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light border-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-crown me-2"></i>Top Selling Items
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.TopMenuItems.Any())
                    {
                        @foreach (var item in Model.TopMenuItems.Take(5))
                        {
                            var maxRevenue = Model.TopMenuItems.First().TotalRevenue;
                            var percentage = maxRevenue > 0 ? (item.TotalRevenue / maxRevenue) * 100 : 0;
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <span class="fw-bold">@item.ItemName</span>
                                    <br><small class="text-muted">Qty: @item.TotalQuantitySold</small>
                                </div>
                                <span class="badge bg-success">₹@item.TotalRevenue.ToString("N0")</span>
                            </div>
                            <div class="progress mb-3" style="height: 6px;">
                                <div class="progress-bar bg-success" style="width: @percentage%"></div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No menu items data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Server Performance -->
    @if (Model.ServerPerformance.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light border-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-users me-2"></i>Server Performance
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Server</th>
                                        <th>Orders</th>
                                        <th>Total Sales</th>
                                        <th>Avg Order Value</th>
                                        <th>Tips</th>
                                        <th>Tip %</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var server in Model.ServerPerformance)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <span class="fw-bold">@server.ServerName</span>
                                                    <br><small class="text-muted">@server.Username</small>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-primary">@server.OrderCount</span></td>
                                            <td class="fw-bold text-success">₹@server.TotalSales.ToString("N2")</td>
                                            <td>₹@server.AvgOrderValue.ToString("N2")</td>
                                            <td>₹@server.TotalTips.ToString("N2")</td>
                                            <td>
                                                <span class="badge bg-info">@server.TipPercentage.ToString("F1")%</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Order Status & Hourly Pattern -->
    <div class="row mb-4">
        @if (Model.OrderStatusData.Any())
        {
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-light border-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-pie me-2"></i>Order Status Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var status in Model.OrderStatusData)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-bold">@status.OrderStatus</span>
                                <div>
                                    <span class="badge bg-primary me-2">@status.OrderCount</span>
                                    <small class="text-muted">@status.Percentage.ToString("F1")%</small>
                                </div>
                            </div>
                            <div class="progress mb-3" style="height: 8px;">
                                <div class="progress-bar 
                                    @(status.OrderStatus == "Completed" ? "bg-success" : 
                                      status.OrderStatus == "Cancelled" ? "bg-danger" : 
                                      status.OrderStatus == "Active" ? "bg-warning" : "bg-info")" 
                                     style="width: @status.Percentage%"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        @if (Model.HourlySalesPattern.Any())
        {
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-light border-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-clock me-2"></i>Hourly Sales Pattern
                        </h5>
                    </div>
                    <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                        @foreach (var hour in Model.HourlySalesPattern.Where(h => h.OrderCount > 0))
                        {
                            var maxHourlySales = Model.HourlySalesPattern.Max(h => h.HourlySales);
                            var percentage = maxHourlySales > 0 ? (hour.HourlySales / maxHourlySales) * 100 : 0;
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <span class="fw-bold">@hour.HourRange</span>
                                    <br><small class="text-muted">@hour.OrderCount orders</small>
                                </div>
                                <span class="badge bg-info">₹@hour.HourlySales.ToString("N0")</span>
                            </div>
                            <div class="progress mb-3" style="height: 6px;">
                                <div class="progress-bar bg-info" style="width: @percentage%"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function exportToPDF() {
        // Implementation for PDF export
        alert('PDF export functionality will be implemented with a library like jsPDF');
    }

    function exportToExcel() {
        // Implementation for Excel export
        alert('Excel export functionality will be implemented with a library like SheetJS');
    }

    // Export Order Listing to CSV
    function exportOrderListingToCSV() {
        const table = document.getElementById('orderListingTable');
        if (!table) {
            alert('No data to export');
            return;
        }

        let csv = [];
        
        // Get headers
        const headers = [];
        table.querySelectorAll('thead th').forEach(th => {
            headers.push('"' + th.textContent.trim() + '"');
        });
        csv.push(headers.join(','));
        
        // Get data rows
        table.querySelectorAll('tbody tr').forEach(tr => {
            const row = [];
            tr.querySelectorAll('td').forEach((td, index) => {
                let text = td.textContent.trim();
                // Remove extra spaces and newlines
                text = text.replace(/\s+/g, ' ');
                // Escape quotes
                text = text.replace(/"/g, '""');
                row.push('"' + text + '"');
            });
            if (row.length > 0) {
                csv.push(row.join(','));
            }
        });
        
        // Create download
        const csvContent = csv.join('\n');
        const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
        const link = document.createElement('a');
        const url = URL.createObjectURL(blob);
        
        const filename = 'Sales_Order_Listing_' + new Date().toISOString().split('T')[0] + '.csv';
        link.setAttribute('href', url);
        link.setAttribute('download', filename);
        link.style.visibility = 'hidden';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    }

    // Export Order Listing to PDF
    function exportOrderListingToPDF() {
        const printContent = document.getElementById('orderListingTable').parentElement;
        const originalContent = document.body.innerHTML;
        
        // Create a printable version
        const printWindow = window.open('', '', 'height=600,width=800');
        printWindow.document.write('<html><head><title>Sales Order Listing</title>');
        printWindow.document.write('<style>');
        printWindow.document.write('body { font-family: Arial, sans-serif; margin: 20px; }');
        printWindow.document.write('h1 { color: #16a34a; border-bottom: 3px solid #16a34a; padding-bottom: 10px; }');
        printWindow.document.write('table { width: 100%; border-collapse: collapse; margin-top: 20px; font-size: 10pt; }');
        printWindow.document.write('th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }');
        printWindow.document.write('th { background-color: #16a34a; color: white; font-weight: bold; }');
        printWindow.document.write('tr:nth-child(even) { background-color: #f9f9f9; }');
        printWindow.document.write('.text-end { text-align: right; }');
        printWindow.document.write('.text-center { text-align: center; }');
        printWindow.document.write('.text-danger { color: #dc2626; }');
        printWindow.document.write('.text-success { color: #16a34a; }');
        printWindow.document.write('.fw-bold { font-weight: bold; }');
        printWindow.document.write('.fw-semibold { font-weight: 600; }');
        printWindow.document.write('.badge { padding: 4px 8px; border-radius: 4px; font-size: 9pt; display: inline-block; }');
        printWindow.document.write('.bg-success { background-color: #16a34a; color: white; }');
        printWindow.document.write('.bg-warning { background-color: #fbbf24; color: #000; }');
        printWindow.document.write('.bg-info { background-color: #06b6d4; color: white; }');
        printWindow.document.write('.bg-danger { background-color: #dc2626; color: white; }');
        printWindow.document.write('.bg-secondary { background-color: #6b7280; color: white; }');
        printWindow.document.write('tfoot { background-color: #f3f4f6; font-weight: bold; }');
        printWindow.document.write('@@media print { .no-print { display: none; } }');
        printWindow.document.write('</style>');
        printWindow.document.write('</head><body>');
        printWindow.document.write('<h1>Sales Order Listing Report</h1>');
        printWindow.document.write('<p><strong>Generated:</strong> ' + new Date().toLocaleString() + '</p>');
        printWindow.document.write(printContent.innerHTML);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        
        // Wait for content to load then print
        setTimeout(() => {
            printWindow.print();
            printWindow.close();
        }, 250);
    }

    // Auto-submit form when filter values change
    document.addEventListener('DOMContentLoaded', function() {
        const startDate = document.querySelector('input[name="Filter.StartDate"]');
        const endDate = document.querySelector('input[name="Filter.EndDate"]');
        const userId = document.querySelector('select[name="Filter.UserId"]');

        [startDate, endDate, userId].forEach(element => {
            if (element) {
                element.addEventListener('change', function() {
                    document.getElementById('filterForm').submit();
                });
            }
        });
    });
</script>

<style>
    .bg-gradient-success {
        background: linear-gradient(45deg, #28a745, #20c997);
    }
    .bg-gradient-primary {
        background: linear-gradient(45deg, #007bff, #6610f2);
    }
    .bg-gradient-info {
        background: linear-gradient(45deg, #17a2b8, #6f42c1);
    }
    .bg-gradient-warning {
