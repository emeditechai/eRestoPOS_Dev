@model RestaurantManagementSystem.Models.OrderReportViewModel
@using RestaurantManagementSystem.Models.Authorization
@{
    ViewData["Title"] = "Order Reports";
    var reportPermissions = ViewBag.ReportPermissions as PermissionSet ?? new PermissionSet();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-shopping-cart me-2"></i>Order Reports</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Reports" asp-action="Index">Reports</a></li>
                        <li class="breadcrumb-item active">Orders</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Order Filters</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Orders" method="post" id="orderFilterForm">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="Filter.FromDate" class="form-label">From Date</label>
                                <input asp-for="Filter.FromDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Filter.ToDate" class="form-label">To Date</label>
                                <input asp-for="Filter.ToDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Filter.UserId" class="form-label">Waiter</label>
                                <select asp-for="Filter.UserId" asp-items="Model.AvailableUsers" class="form-select">
                                    <option value="">All Waiters</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Filter.Status" class="form-label">Status</label>
                                <select asp-for="Filter.Status" class="form-select">
                                    <option value="">All Status</option>
                                    <option value="0">New Order</option>
                                    <option value="1">Pending</option>
                                    <option value="2">In Progress</option>
                                    <option value="3">Completed</option>
                                    <option value="4">Cancelled</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Filter.OrderType" class="form-label">Order Type</label>
                                <select asp-for="Filter.OrderType" class="form-select">
                                    <option value="">All Types</option>
                                    <option value="0">Walk-In</option>
                                    <option value="1">Dine-In</option>
                                    <option value="2">Takeaway</option>
                                    <option value="3">Delivery</option>
                                </select>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-4">
                                <label asp-for="Filter.SearchTerm" class="form-label">Search</label>
                                <input asp-for="Filter.SearchTerm" class="form-control" placeholder="Order number, customer name, phone..." />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Filter.PageSize" class="form-label">Page Size</label>
                                <select asp-for="Filter.PageSize" class="form-select">
                                    <option value="25">25</option>
                                    <option value="50" selected>50</option>
                                    <option value="100">100</option>
                                </select>
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-search me-1"></i>Generate Report
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="resetFilters()">
                                    <i class="fas fa-undo me-1"></i>Reset
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">Total Orders</div>
                            <div class="h5 mb-0 font-weight-bold">@Model.Summary.TotalOrders</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <div class="card-body text-white">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">Total Revenue</div>
                            <div class="h5 mb-0 font-weight-bold">@Model.Summary.FormattedTotalRevenue</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-rupee-sign fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <div class="card-body text-white">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">Average Order Value</div>
                            <div class="h5 mb-0 font-weight-bold">@Model.Summary.FormattedAverageOrderValue</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                <div class="card-body text-white">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-white-50 text-uppercase mb-1">Completion Rate</div>
                            <div class="h5 mb-0 font-weight-bold">@Model.Summary.CompletionRate.ToString("F1")%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Distribution -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Order Status Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">New Orders:</span>
                                <span class="badge bg-primary text-white">@Model.Summary.PendingOrders</span>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">In Progress:</span>
                                <span class="badge bg-info text-white">@Model.Summary.InProgressOrders</span>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Completed:</span>
                                <span class="badge bg-success text-white">@Model.Summary.CompletedOrders</span>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Cancelled:</span>
                                <span class="badge bg-danger text-white">@Model.Summary.CancelledOrders</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="fas fa-utensils me-2"></i>Order Type Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Walk-In:</span>
                                <span class="badge bg-secondary text-white">@Model.Summary.DineInOrders</span>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Takeaway:</span>
                                <span class="badge bg-warning text-dark">@Model.Summary.TakeawayOrders</span>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Delivery:</span>
                                <span class="badge bg-info text-white">@Model.Summary.DeliveryOrders</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Order Details</h5>
                    <div class="d-flex align-items-center gap-3">
                        <span class="badge bg-light text-dark">@Model.TotalCount total orders</span>
                        @if (reportPermissions.CanExport)
                        {
                            <div class="btn-group btn-group-sm" role="group">
                                <button type="button" class="btn btn-outline-success text-white" onclick="exportOrdersToCsv()">
                                    <i class="fas fa-file-csv me-1"></i>CSV
                                </button>
                                <button type="button" class="btn btn-outline-warning text-white" onclick="exportOrdersToExcel()">
                                    <i class="fas fa-file-excel me-1"></i>Excel
                                </button>
                                <button type="button" class="btn btn-outline-danger text-white" onclick="exportOrdersToPdf()">
                                    <i class="fas fa-file-pdf me-1"></i>PDF
                                </button>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Order #</th>
                                    <th>Customer</th>
                                    <th>Waiter</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Items</th>
                                    <th>Amount</th>
                                    <th>Created</th>
                                    <th>Prep Time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Orders.Any())
                                {
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>
                                                <div>@(!string.IsNullOrEmpty(order.CustomerName) ? order.CustomerName : "Walk-in")</div>
                                                @if (!string.IsNullOrEmpty(order.CustomerPhone))
                                                {
                                                    <small class="text-muted">@order.CustomerPhone</small>
                                                }
                                            </td>
                                            <td>@order.WaiterName</td>
                                            <td><span class="@order.OrderTypeBadgeClass">@order.OrderTypeName</span></td>
                                            <td><span class="@order.StatusBadgeClass">@order.StatusName</span></td>
                                            <td>
                                                <span class="badge bg-secondary">@order.ItemCount items</span>
                                                <small class="text-muted d-block">Qty: @order.TotalQuantity</small>
                                            </td>
                                            <td>
                                                <strong>@order.FormattedTotalAmount</strong>
                                                @if (order.DiscountAmount > 0)
                                                {
                                                    <small class="text-success d-block">-@order.FormattedDiscountAmount</small>
                                                }
                                            </td>
                                            <td>
                                                <div>@order.FormattedCreatedAt</div>
                                            </td>
                                            <td>
                                                @if (order.PreparationTimeMinutes != null)
                                                {
                                                    <span class="badge bg-info">@order.FormattedPreparationTime</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                                        onclick="showOrderDetails(@order.Id)" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        @if (order.HasSpecialInstructions)
                                        {
                                            <tr class="table-secondary">
                                                <td colspan="10">
                                                    <small><strong>Special Instructions:</strong> @order.SpecialInstructions</small>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center py-4">
                                            <i class="fas fa-shopping-cart fa-2x text-muted mb-2"></i>
                                            <div class="text-muted">No orders found for the selected criteria</div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer">
                        <nav aria-label="Order pagination">
                            <ul class="pagination justify-content-center mb-0">
                                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link" href="#" onclick="changePage(@(Model.CurrentPage - 1))">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                                
                                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="#" onclick="changePage(@i)">@i</a>
                                    </li>
                                }
                                
                                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                    <a class="page-link" href="#" onclick="changePage(@(Model.CurrentPage + 1))">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <div class="text-center mt-2">
                            <small class="text-muted">
                                Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to 
                                @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) 
                                of @Model.TotalCount orders
                            </small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function resetFilters() {
        document.getElementById('Filter_FromDate').value = '@DateTime.Today.ToString("yyyy-MM-dd")';
        document.getElementById('Filter_ToDate').value = '@DateTime.Today.ToString("yyyy-MM-dd")';
        document.getElementById('Filter_UserId').value = '';
        document.getElementById('Filter_Status').value = '';
        document.getElementById('Filter_OrderType').value = '';
        document.getElementById('Filter_SearchTerm').value = '';
        document.getElementById('Filter_PageSize').value = '50';
    }

    function changePage(pageNumber) {
        if (pageNumber < 1 || pageNumber > @Model.TotalPages) {
            return false;
        }
        
        var form = document.getElementById('orderFilterForm');
        var pageInput = document.createElement('input');
        pageInput.type = 'hidden';
        pageInput.name = 'page';
        pageInput.value = pageNumber;
        form.appendChild(pageInput);
        form.submit();
        return false;
    }

    function showOrderDetails(orderId) {
        // Placeholder for order details modal
        alert('Order details for Order ID: ' + orderId + '\n\nThis feature can be expanded to show detailed order information in a modal.');
    }

    function ensureExportAllowed() {
        var canExport = @((reportPermissions.CanExport).ToString().ToLower());
        if (!canExport) {
            alert('You do not have permission to export this report.');
            return false;
        }
        return true;
    }

    function exportOrdersToCsv() {
        if (!ensureExportAllowed()) return;
        alert('CSV export will be wired to backend endpoint.');
    }

    function exportOrdersToExcel() {
        if (!ensureExportAllowed()) return;
        alert('Excel export will be wired to backend endpoint.');
    }

    function exportOrdersToPdf() {
        if (!ensureExportAllowed()) return;
        alert('PDF export will be wired to backend endpoint.');
    }
</script>