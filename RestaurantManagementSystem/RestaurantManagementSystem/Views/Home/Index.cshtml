<div class="container-fluid p-0">
    <div class="dashboard-container">
        <div class="dashboard-header">
            <div class="brand-logo-wrapper" title="@Model.RestaurantName">
                @if (!string.IsNullOrEmpty(Model.LogoPath))
                {
                    <img src="@Model.LogoPath" alt="@Model.RestaurantName Logo" class="brand-logo" />
                }
                else
                {
                    <i class="fas fa-store fa-2x text-white" aria-hidden="true"></i>
                }
                <span class="brand-name">@Model.RestaurantName</span>
            </div>
            <h1><i class="fas fa-utensils me-2" aria-hidden="true"></i>@Model.RestaurantName Dashboard</h1>
            <p>Welcome back, <strong>@Model.UserFullName</strong>!</p>
            
            <div class="user-info">
                <div>
                    <strong>Roles:</strong>
                    @foreach (var role in Model.UserRoles)
                    {
                        <span class="user-role-badge">@role</span>
                    }
                </div>
                
                <div class="last-login">
                    <i class="fas fa-clock me-1"></i> Last login: @Model.LastLoginDate.ToString("MMM d, yyyy h:mm tt")
                </div>
            </div>
        </div>
        

        <!-- Stats Cards -->
        <div class="row stats-container">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="stats-card sales py-2">
                    <div class="sparkline"><canvas id="spark-sales"></canvas></div>
                    <span class="icon"><i class="fas fa-rupee-sign"></i></span>
                    <h3>Today's Sales</h3>
                    <p class="number">₹@Model.TodaySales.ToString("N2")</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="stats-card orders py-2">
                    <div class="sparkline"><canvas id="spark-orders"></canvas></div>
                    <span class="icon"><i class="fas fa-shopping-cart"></i></span>
                    <h3>Today's Orders</h3>
                    <p class="number">@Model.TodayOrders</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="stats-card tables py-2">
                    <div class="sparkline"><canvas id="spark-tables"></canvas></div>
                    <span class="icon"><i class="fas fa-chair"></i></span>
                    <h3>Active Tables</h3>
                    <p class="number">@Model.ActiveTables</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="stats-card reservations py-2">
                    <div class="sparkline"><canvas id="spark-reservations"></canvas></div>
                    <span class="icon"><i class="fas fa-calendar-check"></i></span>
                    <h3>Upcoming Reservations</h3>
                    <p class="number">@Model.UpcomingReservations</p>
                </div>
            </div>
        </div>    <!-- Quick Action Buttons -->
