                            .text-center { text-align: center; }
                            .total-row { 
                                background-color: #e8f5e8;
                                font-weight: bold;
                            }
                            .footer { 
                                margin-top: 30px; 
                                text-align: center; 
                                font-style: italic;
                                color: #666;
                                border-top: 1px solid #ddd;
                                padding-top: 15px;
                            }
