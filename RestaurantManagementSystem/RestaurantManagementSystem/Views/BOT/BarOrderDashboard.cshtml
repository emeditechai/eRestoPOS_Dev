@model OrderDashboardViewModel
@{
    ViewData["Title"] = "Bar Order Dashboard";
}

<div class="container-fluid p-3" style="background: linear-gradient(135deg, #f5f3ff 60%, #ede9fe 100%); min-height:100vh;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 style="color: #7c3aed;">
            <i class="fas fa-cocktail me-2"></i>@ViewData["Title"]
        </h1>
        <div>
            <a asp-controller="BOT" asp-action="BarOrderCreate" class="btn text-white" style="background: linear-gradient(90deg, #9333ea 60%, #a855f7 100%);" target="_blank" rel="noopener noreferrer">
                <i class="fas fa-plus-circle"></i> New Bar Order
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Compact styling with purple theme *@
    <style>
        .card { border-radius: 8px; }
        .card-header { padding: .5rem .75rem; }
        .card-body { padding: .75rem; }
        table.table { font-size: .9rem; }
        table.table td, table.table th { padding: .4rem .5rem; vertical-align: middle; }
        thead.sticky th { position: sticky; top: 0; z-index: 2; }
        .metric-card .card-body { padding: .6rem .8rem; }
        .metric-card h5 { font-size: .95rem; margin-bottom: .25rem; }
        .metric-card h2 { font-size: 1.6rem; margin: 0; }
        .badge { font-size: .75rem; }
        .btn-group .btn { padding: .2rem .4rem; }
        .table-container { max-height: 28vh; overflow: auto; }
        .bar-metric-card { border-left: 4px solid #7c3aed; }
    </style>

    @* Metrics row with purple theme *@
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card text-white metric-card bar-metric-card" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);">
                <div class="card-body">
                    <h5>Open Orders</h5>
                    <h2>@Model.OpenOrdersCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white metric-card bar-metric-card" style="background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);">
                <div class="card-body">
                    <h5>In Progress</h5>
                    <h2>@Model.InProgressOrdersCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white metric-card bar-metric-card" style="background: linear-gradient(135deg, #a855f7 0%, #c084fc 100%);">
                <div class="card-body">
                    <h5>Ready</h5>
                    <h2>@Model.ReadyOrdersCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white metric-card bar-metric-card" style="background: linear-gradient(135deg, #c084fc 0%, #d8b4fe 100%);">
                <div class="card-body">
                    <h5>Today's Bar Sales</h5>
                    <h2>₹@Model.TotalSales.ToString("F2")</h2>
                </div>
            </div>
        </div>
    </div>

    @* Active Bar Orders *@
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center" style="background: linear-gradient(90deg, #9333ea 60%, #a855f7 100%); color: white;">
                    <h5 class="mb-0"><i class="fas fa-wine-glass-alt me-2"></i>Active Bar Orders</h5>
                    <div class="d-flex align-items-center" style="gap:.5rem">
                        <small>Bar items only</small>
                        <span class="badge bg-white text-purple rounded-pill px-3" style="color: #7c3aed;" title="Active bar orders">@((Model.ActiveOrders?.Count() ?? 0).ToString()) Records</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.ActiveOrders.Any())
                    {
                        <div class="table-responsive table-container">
                            <table class="table table-striped table-hover" id="activeOrders">
                                <thead class="sticky" style="background: linear-gradient(90deg, #7c3aed 60%, #9333ea 100%); color: white;">
                                    <tr class="text-center">
                                        <th>Order #</th>
                                        <th>Type</th>
                                        <th>Table/Customer</th>
                                        <th>Server</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Duration</th>
                                        <th>Bar Items</th>
                                        <th>Total</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.ActiveOrders)
                                    {
                                        <tr class="align-middle text-center">
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.OrderTypeDisplay</td>
                                            <td>
                                                @if (order.OrderType == 0)
                                                {
                                                    @(order.TableName ?? "No Table")
                                                }
                                                else
                                                {
                                                    @(order.GuestName ?? "No Name")
                                                }
                                            </td>
                                            <td>@(order.ServerName ?? "Unassigned")</td>
                                            <td>
                                                @{
                                                    var badgeClass = order.Status switch
                                                    {
                                                        0 => "bg-primary",
                                                        1 => "bg-warning text-dark",
                                                        2 => "bg-success",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@order.StatusDisplay</span>
                                            </td>
                                            <td>@order.CreatedAt.ToString("dd/MM HH:mm")</td>
                                            <td>@order.Duration.ToString(@"hh\:mm")</td>
                                            <td><span class="badge bg-purple-100" style="background-color: #e9d5ff; color: #7c3aed;">@order.ItemCount</span></td>
                                            <td><strong>₹@order.TotalAmount.ToString("F2")</strong></td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" asp-route-fromBar="true" class="btn btn-sm btn-outline-primary" title="View Order">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/Payment/Index/@order.Id?fromBar=true" class="btn btn-sm btn-outline-success" title="Process Payment">
                                                        <i class="fas fa-credit-card"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger cancel-order-trigger"
                                                            data-order-id="@order.Id" data-order-number="@order.OrderNumber" title="Cancel Order">
                                                        <i class="fas fa-times-circle"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>No active bar orders at the moment.
                        </div>
                    }
                </div>
            </div>

            <!-- Completed Bar Orders Section -->
            <div class="card mt-3">
                <div class="card-header d-flex justify-content-between align-items-center" style="background: linear-gradient(90deg, #9333ea 60%, #a855f7 100%); color: white;">
                    <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Completed Bar Orders</h5>
                    <form class="d-flex align-items-center" method="get" asp-controller="BOT" asp-action="BarOrderDashboard" style="gap:.5rem">
                        <label class="small mb-0">From</label>
                        <input type="date" name="fromDate" class="form-control form-control-sm" value="@(ViewContext.HttpContext.Request.Query["fromDate"].ToString())" />
                        <label class="small mb-0">To</label>
                        <input type="date" name="toDate" class="form-control form-control-sm" value="@(ViewContext.HttpContext.Request.Query["toDate"].ToString())" />
                        <button type="submit" class="btn btn-sm btn-light" title="Filter"><i class="fas fa-filter"></i></button>
                        <a asp-controller="BOT" asp-action="BarOrderDashboard" class="btn btn-sm btn-outline-light" title="Reset"><i class="fas fa-undo"></i></a>
                    </form>
                </div>
                <div class="card-body">
                    @if (Model.CompletedOrders.Any())
                    {
                        <div class="table-responsive table-container">
                            <table class="table table-sm table-striped table-hover" id="completedOrders">
                                <thead class="sticky" style="background: linear-gradient(90deg, #7c3aed 60%, #9333ea 100%); color: white;">
                                    <tr class="text-center">
                                        <th>Order #</th>
                                        <th>Type</th>
                                        <th>Table/Customer</th>
                                        <th>Bar Items</th>
                                        <th>Total</th>
                                        <th>Duration</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.CompletedOrders)
                                    {
                                        <tr class="align-middle text-center">
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.OrderTypeDisplay</td>
                                            <td>
                                                @if (order.OrderType == 0) { @(order.TableName ?? "No Table") }
                                                else { @(order.GuestName ?? "No Name") }
                                            </td>
                                            <td><span class="badge bg-purple-100" style="background-color: #e9d5ff; color: #7c3aed;">@order.ItemCount</span></td>
                                            <td><strong>₹@order.TotalAmount.ToString("F2")</strong></td>
                                            <td>@order.Duration.ToString(@"hh\:mm")</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" asp-route-fromBar="true" class="btn btn-sm btn-outline-secondary" title="View Order">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/Payment/Index/@order.Id?fromBar=true" class="btn btn-sm btn-outline-success" title="Payment">
                                                        <i class="fas fa-credit-card"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="alert mt-2 mb-0 py-2" style="background-color: #ede9fe; border-color: #7c3aed; color: #5b21b6;">
                            <strong>Total Completed:</strong> @Model.CompletedOrdersCount
                            <span class="mx-2">|</span>
                            <strong>Total Bar Sales:</strong> ₹@Model.TotalSales.ToString("F2")
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>No completed bar orders today.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#activeOrders').DataTable({
                order: [[5, 'desc']],
                paging: false,
                info: false,
                searching: true,
                scrollY: '28vh',
                scrollCollapse: true
            });
            $('#completedOrders').DataTable({
                order: [[0, 'desc']],
                paging: false,
                info: false,
                searching: true,
                scrollY: '28vh',
                scrollCollapse: true
            });

            // Keep dashboard fresh - refresh every 2 minutes
            setTimeout(function() { location.reload(); }, 120000);
        });
    </script>

    @* Tooltips *@
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.map(function (tooltipTriggerEl) { return new bootstrap.Tooltip(tooltipTriggerEl) })
        });

        // Cancel order modal logic (same as Order Dashboard)
        document.addEventListener('DOMContentLoaded', function() {
            const modalEl = document.getElementById('cancelOrderModal');
            if (!modalEl) return; // safety
            const confirmBtn = document.getElementById('confirmCancelOrderBtn');
            const orderInfoSpan = document.getElementById('cancelOrderInfo');
            const hiddenOrderId = document.getElementById('cancelOrderId');
            const bsModal = new bootstrap.Modal(modalEl);

            document.querySelectorAll('.cancel-order-trigger').forEach(btn => {
                btn.addEventListener('click', () => {
                    const id = btn.getAttribute('data-order-id');
                    const number = btn.getAttribute('data-order-number');
                    hiddenOrderId.value = id;
                    orderInfoSpan.textContent = number;
                    bsModal.show();
                });
            });

            if (confirmBtn) {
                confirmBtn.addEventListener('click', () => {
                    if (!hiddenOrderId.value) return;
                    // Build a safe local return URL back to current page (preserve filters)
                    const current = window.location.pathname + window.location.search;
                    const r = encodeURIComponent(current);
                    window.location.href = `/Order/CancelOrder/${hiddenOrderId.value}?returnUrl=${r}`;
                });
            }
        });
    </script>
}

<!-- Cancel Order Confirmation Modal -->
<div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Cancellation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="cancelOrderId" />
                <p class="mb-2">You are about to cancel order: <strong id="cancelOrderInfo"></strong></p>
                <div class="alert alert-warning mb-0 small"><i class="fas fa-info-circle me-1"></i>This action cannot be undone and items will be marked as cancelled.</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Order</button>
                <button type="button" class="btn btn-danger" id="confirmCancelOrderBtn">Yes, Cancel Order</button>
            </div>
        </div>
    </div>
</div>
