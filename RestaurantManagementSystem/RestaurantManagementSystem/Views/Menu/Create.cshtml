@model RestaurantManagementSystem.ViewModels.MenuItemViewModel

@{
    ViewData["Title"] = "Create Menu Item";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Create Menu Item</h4>
                    <div class="float-right">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <ul class="nav nav-tabs nav-fill mb-3" id="menuItemTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">
                                    <i class="fas fa-info-circle me-1"></i> General
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="allergens-tab" data-bs-toggle="tab" data-bs-target="#allergens" type="button" role="tab" aria-controls="allergens" aria-selected="false">
                                    <i class="fas fa-exclamation-triangle me-1"></i> Allergens
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="modifiers-tab" data-bs-toggle="tab" data-bs-target="#modifiers" type="button" role="tab" aria-controls="modifiers" aria-selected="false">
                                    <i class="fas fa-sliders-h me-1"></i> Modifiers
                                </button>
                            </li>
                        </ul>
                        
                        <div class="tab-content py-3" id="menuItemTabsContent">
                            <!-- General Tab -->
                            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-2">
                                            <label asp-for="PLUCode" class="form-label small mb-1">PLU Code</label>
                                            <input asp-for="PLUCode" class="form-control form-control-sm" placeholder="Enter PLU code" required />
                                            <span asp-validation-for="PLUCode" class="text-danger small"></span>
                                        </div>
                                        <div class="form-group mb-2">
                                            <label asp-for="MenuItemGroupId" class="form-label small mb-1">Item Group</label>
                                            <select asp-for="MenuItemGroupId" class="form-select form-select-sm" asp-items="ViewBag.MenuItemGroups" required aria-required="true">
                                                <option value="">-- Select Item Group --</option>
                                            </select>
                                            <div class="invalid-feedback">Please select an item group.</div>
                                            <span asp-validation-for="MenuItemGroupId" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="Name" class="form-label small mb-1">Item Name</label>
                                            <input asp-for="Name" class="form-control form-control-sm" placeholder="Enter item name" />
                                            <span asp-validation-for="Name" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="Price" class="form-label small mb-1">Price (₹)</label>
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text">₹</span>
                                                <input asp-for="Price" class="form-control form-control-sm" type="number" step="0.01" placeholder="0.00" />
                                            </div>
                                            <span asp-validation-for="Price" class="text-danger small"></span>
                                        </div>
                                        
                                        <!-- UOM Dropdown - Visible only for BAR items -->
                                        <div class="form-group mb-2" id="uom-group" style="display: none;">
                                            <label asp-for="UOMId" class="form-label small mb-1">Unit of Measurement</label>
                                            <select asp-for="UOMId" class="form-select form-select-sm" asp-items="ViewBag.UOMs">
                                                <option value="">-- Select UOM --</option>
                                            </select>
                                            <span asp-validation-for="UOMId" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="CategoryId" class="form-label small mb-1">Category</label>
                                            <select asp-for="CategoryId" class="form-select form-select-sm" asp-items="ViewBag.Categories" onchange="loadSubCategories()">
                                                <option value="">-- Select Category --</option>
                                            </select>
                                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                        </div>

                                        <div class="form-group mb-2">
                                            <label asp-for="SubCategoryId" class="form-label small mb-1 required">Sub Category</label>
                                            <select asp-for="SubCategoryId" class="form-select form-select-sm" asp-items="ViewBag.SubCategories" required aria-required="true">
                                                <option value="">-- Select Sub Category --</option>
                                            </select>
                                            <div class="invalid-feedback">Please select a sub category.</div>
                                            <span asp-validation-for="SubCategoryId" class="text-danger small"></span>
                                        </div>

                                        <div class="form-group mb-2">
                                            <label asp-for="KitchenStationId" class="form-label small mb-1">Kitchen Station</label>
                                            <select asp-for="KitchenStationId" class="form-select form-select-sm" asp-items="ViewBag.KitchenStations">
                                                <option value="">-- Select Kitchen Station --</option>
                                            </select>
                                            <span asp-validation-for="KitchenStationId" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-group mb-2">
                                            <label asp-for="PreparationTimeMinutes" class="form-label small mb-1">Prep Time (min)</label>
                                            <input asp-for="PreparationTimeMinutes" class="form-control form-control-sm" type="number" placeholder="15" value="1" min="1" />
                                            <span asp-validation-for="PreparationTimeMinutes" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="CalorieCount" class="form-label small mb-1">Calories</label>
                                            <input asp-for="CalorieCount" class="form-control form-control-sm" type="number" placeholder="Enter calories" />
                                            <span asp-validation-for="CalorieCount" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="DiscountPercentage" class="form-label small mb-1">Discount (%)</label>
                                            <div class="input-group input-group-sm">
                                                <input asp-for="DiscountPercentage" class="form-control form-control-sm" type="number" step="0.01" placeholder="0.00" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <span asp-validation-for="DiscountPercentage" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-check form-switch mb-2">
                                            <input asp-for="IsGstApplicable" class="form-check-input" id="IsGstApplicableCreate" />
                                            <label class="form-check-label small" for="IsGstApplicableCreate">Is GST Applicable</label>
                                        </div>
                                        <div class="form-group mb-2">
                                            <label asp-for="GSTPercentage" class="form-label small mb-1">GST Percentage</label>
                                            <div class="input-group input-group-sm">
                                                <input asp-for="GSTPercentage" class="form-control form-control-sm" type="number" step="0.01" placeholder="0.00" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <span asp-validation-for="GSTPercentage" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="ImageFile" class="form-label small mb-1">Item Image</label>
                                            <input asp-for="ImageFile" type="file" class="form-control form-control-sm" accept="image/*" />
                                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                                        </div>
                                        
                                        <div class="form-group mb-2">
                                            <label asp-for="Description" class="form-label small mb-1">Description</label>
                                            <textarea asp-for="Description" class="form-control form-control-sm" rows="3" placeholder="Enter item description"></textarea>
                                            <span asp-validation-for="Description" class="text-danger small"></span>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="d-flex gap-3">
                                                    <div class="form-check mb-2">
                                                        <input asp-for="IsAvailable" class="form-check-input" />
                                                        <label asp-for="IsAvailable" class="form-check-label small">Available</label>
                                                    </div>
                                                    <div class="form-check mb-2">
                                                        <input asp-for="NotAvailable" class="form-check-input" id="NotAvailableCreate" />
                                                        <label class="form-check-label small" for="NotAvailableCreate">Not Available</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check mb-2">
                                                    <input asp-for="IsFeatured" class="form-check-input" />
                                                    <label asp-for="IsFeatured" class="form-check-label small">Featured</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check mb-2">
                                                    <input asp-for="IsSpecial" class="form-check-input" />
                                                    <label asp-for="IsSpecial" class="form-check-label small">Special</label>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="mt-3 d-flex justify-content-end">
                                            <button type="button" class="btn btn-sm btn-primary" id="goToAllergensTab">
                                                Next: Allergens <i class="fas fa-arrow-right ms-1"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Allergens Tab -->
                            <div class="tab-pane fade" id="allergens" role="tabpanel" aria-labelledby="allergens-tab">
                                <div class="row g-2">
                                    @if (ViewBag.Allergens != null)
                                    {
                                        @foreach (var allergen in ViewBag.Allergens)
                                        {
                                            <div class="col-md-3 col-sm-4 mb-2">
                                                <div class="card h-100 shadow-sm">
                                                    <div class="card-body p-2">
                                                        <div class="form-check">
                                                            <input type="checkbox" name="SelectedAllergens" value="@allergen.Id" id="allergen-@allergen.Id" class="form-check-input" />
                                                            <label class="form-check-label fw-bold" for="allergen-@allergen.Id">
                                                                @allergen.Name
                                                            </label>
                                                            @if (!string.IsNullOrEmpty(allergen.Description))
                                                            {
                                                                <div>
                                                                    <small class="text-muted">@allergen.Description</small>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>

                                <div class="mt-3 d-flex justify-content-between">
                                    <button type="button" class="btn btn-sm btn-secondary" id="goToGeneralTab">
                                        <i class="fas fa-arrow-left me-1"></i> Previous
                                    </button>
                                    <button type="button" class="btn btn-sm btn-primary" id="goToModifiersTab">
                                        Next: Modifiers <i class="fas fa-arrow-right ms-1"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <!-- Modifiers Tab -->
                            <div class="tab-pane fade" id="modifiers" role="tabpanel" aria-labelledby="modifiers-tab">
                                <div class="row g-2">
                                    @if (ViewBag.Modifiers != null)
                                    {
                                        @foreach (var modifier in ViewBag.Modifiers)
                                        {
                                            <div class="col-md-4 mb-2">
                                                <div class="card h-100 shadow-sm">
                                                    <div class="card-body p-2">
                                                        <div class="form-check">
                                                            <input type="checkbox" name="SelectedModifiers" value="@modifier.Id" id="modifier-@modifier.Id" class="form-check-input modifier-checkbox" 
                                                                   onchange="togglePriceField(@modifier.Id)" />
                                                            <label class="form-check-label fw-bold" for="modifier-@modifier.Id">
                                                                @modifier.Name 
                                                                <span class="badge bg-light text-dark">@modifier.ModifierType</span>
                                                            </label>
                                                        </div>
                                                        
                                                        @if (!string.IsNullOrEmpty(modifier.Description))
                                                        {
                                                            <div class="mt-1">
                                                                <small class="text-muted">@modifier.Description</small>
                                                            </div>
                                                        }
                                                        
                                                        <div class="mt-2 price-adjustment-group" id="price-group-@modifier.Id" style="display:none;">
                                                            <label class="form-label small mb-1">Price Adjustment</label>
                                                            <div class="input-group input-group-sm">
                                                                <span class="input-group-text">₹</span>
                                                                <input type="number" name="ModifierPrices[@modifier.Id]" class="form-control form-control-sm" value="0.00" step="0.01" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                                
                                <div class="mt-3 d-flex justify-content-between">
                                    <button type="button" class="btn btn-sm btn-secondary" id="goToAllergensTab">
                                        <i class="fas fa-arrow-left me-1"></i> Previous
                                    </button>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fa fa-save me-1"></i> Save Menu Item
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa fa-times me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save me-1"></i> Create Menu Item
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ingredients feature removed intentionally -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Display filename when selecting an image
        function displayFileName(input) {
            if (input.files && input.files[0]) {
                var fileName = input.files[0].name;
                $(input).siblings('.form-label').after('<small class="text-muted d-block mt-1">' + fileName + '</small>');
            }
        }
        
        // Toggle price adjustment field visibility
        function togglePriceField(modifierId) {
            const checkbox = document.getElementById('modifier-' + modifierId);
            const priceGroup = document.getElementById('price-group-' + modifierId);
            
            if (checkbox && priceGroup) {
                if (checkbox.checked) {
                    $(priceGroup).slideDown(200);
                } else {
                    $(priceGroup).slideUp(200);
                }
            }
        }
        
    $(document).ready(function() {
            
            // Ensure tabs are working by manually initializing them
            var triggerTabList = [].slice.call(document.querySelectorAll('#menuItemTabs button'));
            triggerTabList.forEach(function (triggerEl) {
                var tabTrigger = new bootstrap.Tab(triggerEl);
                
                triggerEl.addEventListener('click', function (event) {
                    event.preventDefault();
                    tabTrigger.show();
                });
            });
            
            // Handle hash in URL to activate specific tab
            if (window.location.hash) {
                const hash = window.location.hash;
                const tabId = hash.replace('#', '') + '-tab';
                $('#' + tabId).tab('show');
            }
            
            // Ingredients feature removed
            
            // Tab navigation buttons
            $("#goToGeneralTab").click(function() {
                document.getElementById('general-tab').click();
            });
            
            $("#goToAllergensTab").click(function() {
                document.getElementById('allergens-tab').click();
            });
            
            $("#goToModifiersTab").click(function() {
                document.getElementById('modifiers-tab').click();
            });
            
            // Toggle price fields for modifiers
            function togglePriceField(modifierId) {
                const checkbox = document.getElementById('modifier-' + modifierId);
                const priceGroup = document.getElementById('price-group-' + modifierId);
                
                if (checkbox.checked) {
                    $(priceGroup).slideDown(200);
                } else {
                    $(priceGroup).slideUp(200);
                }
            }
            
            // Initialize price fields for modifiers
            $(".modifier-checkbox").each(function() {
                const modifierId = $(this).val();
                togglePriceField(modifierId);
            });
            
            // Add event handler for modifier checkboxes
            $(document).on("change", ".modifier-checkbox", function() {
                const modifierId = $(this).val();
                togglePriceField(modifierId);
            });
            
            // Form validation before submission
            $('form').on('submit', function(e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    // Find the first invalid field and activate its tab
                    const invalidFields = $(this).find(':invalid');
                    if (invalidFields.length > 0) {
                        const tabPane = $(invalidFields[0]).closest('.tab-pane');
                        const tabId = tabPane.attr('id') + '-tab';
                        document.getElementById(tabId).click();
                        
                        // Scroll to and focus the first invalid field
                        $('html, body').animate({
                            scrollTop: $(invalidFields[0]).offset().top - 100
                        }, 500);
                        $(invalidFields[0]).focus();
                        
                        // Show validation message
                        $(this).addClass('was-validated');
                    }
                }
            });

            // Toggle GST percentage enable state based on checkbox
            function toggleGstField(){
                const gstApplicable = $('#IsGstApplicableCreate').is(':checked');
                const gstInput = $('input[name="GSTPercentage"]');
                gstInput.prop('disabled', !gstApplicable);
                if(!gstApplicable){
                    gstInput.val('');
                }
            }
            $('#IsGstApplicableCreate').on('change', toggleGstField);
            toggleGstField();
            
            // Toggle UOM dropdown visibility based on Item Group selection
            function toggleUOMField() {
                var selectedGroup = $('#MenuItemGroupId option:selected').text().trim();
                var uomGroup = $('#uom-group');
                
                if (selectedGroup === 'BAR') {
                    uomGroup.show();
                } else {
                    uomGroup.hide();
                    $('#UOMId').val(''); // Clear selection when hiding
                }
            }
            
            // Bind change event to Item Group dropdown
            $('#MenuItemGroupId').on('change', toggleUOMField);
            
            // Check initial state on page load
            toggleUOMField();
        });

        // Load subcategories based on selected category
        function loadSubCategories() {
            var categoryId = $('#CategoryId').val();
            var subCategorySelect = $('#SubCategoryId');
            
            // Clear existing options
            subCategorySelect.empty();
            subCategorySelect.append('<option value="">-- Select Sub Category --</option>');
            
            if (categoryId) {
                $.get('@Url.Action("GetSubCategoriesByCategory", "Menu")', { categoryId: categoryId })
                    .done(function(data) {
                        $.each(data, function(index, item) {
                            subCategorySelect.append('<option value="' + item.value + '">' + item.text + '</option>');
                        });
                    })
                    .fail(function() {
                        console.log('Error loading subcategories');
                    });
            }
        }
    </script>
}
