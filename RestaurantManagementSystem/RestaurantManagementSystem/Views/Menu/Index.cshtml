@model IEnumerable<RestaurantManagementSystem.Models.MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Menu Items</h4>
                    <div class="float-right">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Create New
                        </a>
                        <a asp-action="ExportCsv" class="btn btn-outline-secondary ms-2" title="Export CSV">
                            <i class="fas fa-file-csv"></i>
                        </a>
                        <a asp-action="Print" target="_blank" class="btn btn-outline-secondary ms-1" title="Print / PDF">
                            <i class="fas fa-print"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <table id="menuItemsTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>PLU Code</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Item Group</th>
                                <th>Sub Category</th>
                                <th>Price</th>
                                <th>Prep Time</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PLUCode</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImagePath))
                                        {
                                            <img src="@item.ImagePath" alt="@item.Name" style="max-width:50px; max-height:50px;" />
                                        }
                                        else
                                        {
                                            <i class="fa fa-image text-muted"></i>
                                        }
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Category?.Name</td>
                                    <td>@(item.MenuItemGroup?.ItemGroup ?? "-")</td>
                                    <td>@(item.SubCategory?.Name ?? "-")</td>
                                    <td>&#8377;@item.Price.ToString("N2")</td>
                                    <td>@item.PreparationTimeMinutes min</td>
                                    <td>
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge badge-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Unavailable</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                <i class="fa fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a asp-controller="Recipe" asp-action="Create" asp-route-menuItemId="@item.Id" class="btn btn-sm btn-secondary recipe-link" data-menu-id="@item.Id">
                                                <i class="fa fa-book"></i> Recipe
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#menuItemsTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "pageLength": 25,
                "columns": [
                    null,                      // PLU Code
                    { "orderable": false },   // Image
                    null,                      // Name
                    null,                      // Category
                    null,                      // Item Group
                    null,                      // Sub Category
                    null,                      // Price
                    null,                      // Prep Time
                    null,                      // Status
                    { "orderable": false }    // Actions
                ]
            });

            // Ensure DB objects exist before navigating to recipe page
            $(document).on('click', 'a.recipe-link', function (e) {
                e.preventDefault();
                const href = $(this).attr('href');
                fetch('/Recipe/SetupRecipeScripts')
                    .then(() => { window.location.href = href; })
                    .catch(() => { window.location.href = href; });
            });
        });
    </script>
}
