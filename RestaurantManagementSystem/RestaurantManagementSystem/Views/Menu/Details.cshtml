@model RestaurantManagementSystem.Models.MenuItem

@{
    ViewData["Title"] = "Menu Item Details";
}

<div class="container-fluid py-2">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="row mb-3">
            <div class="col">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    
    @if (TempData["InfoMessage"] != null)
    {
        <div class="row mb-3">
            <div class="col">
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header py-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Menu Item Details</h5>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a asp-controller="Recipe" asp-action="Create" asp-route-menuItemId="@Model.Id" class="btn btn-sm btn-info" id="recipeBtn">
                                <i class="fa fa-book"></i> Recipe
                            </a>
                            <a asp-controller="Recipe" asp-action="Create" asp-route-menuItemId="@Model.Id" class="btn btn-sm btn-secondary">
                                <i class="fa fa-plus"></i> Add Recipe
                            </a>
                            <a asp-controller="Recipe" asp-action="CalculateSuggestedPrice" asp-route-id="@Model.Id" class="btn btn-sm btn-success">
                                <i class="fa fa-calculator"></i> Price
                            </a>
                            <script>
                                document.getElementById('recipeBtn').addEventListener('click', function(e) {
                                    e.preventDefault();
                                    // First ensure stored procedures are created
                                    fetch('/Recipe/SetupRecipeScripts')
                                        .then(response => {
                                            window.location.href = this.getAttribute('href');
                                        })
                                        .catch(error => {
                                            window.location.href = this.getAttribute('href');
                                        });
                                });
                            </script>
                            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                <i class="fa fa-list"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body py-2">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card shadow-sm h-100">
                                <div class="text-center p-2" style="background-color: #f8f9fa; border-bottom: 1px solid #e9ecef;">
                                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                                    {
                                        <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded" style="max-height:180px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light p-3 rounded text-center text-muted">
                                            <i class="fa fa-image fa-3x mb-2"></i>
                                            <p class="small mb-0">No image available</p>
                                        </div>
                                    }
                                </div>
                                <div class="card-body p-3">
                                    <h4 class="mb-1">@Model.Name</h4>
                                    <p class="text-muted small mb-2"><strong>PLU:</strong> @Model.PLUCode</p>
                                    
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h5 class="mb-0 text-primary">@Model.Price.ToString("C")</h5>
                                        <div>
                                            @if (Model.DiscountPercentage > 0)
                                            {
                                                <span class="badge bg-danger">
                                                    @Model.DiscountPercentage% OFF
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    
                                    <div class="mb-2 p-2 bg-light rounded border-start border-info border-4">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted"><i class="fas fa-tag me-1"></i>Price Details</span>
                                            <span class="badge bg-info text-white px-3 py-2">
                                                <strong>GST: @((Model.IsGstApplicable && Model.GSTPercentage.HasValue) ? Model.GSTPercentage.Value.ToString("F2") : "N/A")@((Model.IsGstApplicable && Model.GSTPercentage.HasValue)?"%":"")</strong>
                                            </span>
                                        </div>
                                        <div class="d-flex justify-content-between small mt-1">
                                            <span>Base Price</span>
                                            <span>@Model.Price.ToString("C")</span>
                                        </div>
                                    </div>

                                    <hr class="my-2" />

                                    <div class="row g-2">
                                        <div class="col-6">
                                            <div class="card bg-light h-100">
                                                <div class="card-body p-2">
                                                    <label class="small text-muted mb-0">Category</label>
                                                    <p class="mb-0 fw-bold small">@Model.Category?.Name</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="card bg-light h-100">
                                                <div class="card-body p-2">
                                                    <label class="small text-muted mb-0">Sub Category</label>
                                                    <p class="mb-0 fw-bold small">@(Model.SubCategory?.Name ?? "Not specified")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row g-2 mt-2">
                                        <div class="col-6">
                                            <div class="card bg-light h-100">
                                                <div class="card-body p-2">
                                                    <label class="small text-muted mb-0">Prep Time</label>
                                                    <p class="mb-0 fw-bold small">@Model.PreparationTimeMinutes min</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="card bg-light h-100">
                                                <div class="card-body p-2">
                                                    <label class="small text-muted mb-0">Item Group</label>
                                                    <p class="mb-0 fw-bold small">@(Model.MenuItemGroup?.ItemGroup ?? "Not specified")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    @* Display UOM only for BAR items *@
                                    @if (Model.MenuItemGroup?.ItemGroup == "BAR" && !string.IsNullOrEmpty(Model.UOMName))
                                    {
                                        <div class="row g-2 mt-2">
                                            <div class="col-12">
                                                <div class="card bg-light h-100">
                                                    <div class="card-body p-2">
                                                        <label class="small text-muted mb-0">Unit of Measurement</label>
                                                        <p class="mb-0 fw-bold small">@Model.UOMName</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <div class="row g-2 mt-2">
                                        @if (Model.CalorieCount.HasValue)
                                        {
                                            <div class="col-6">
                                                <div class="card bg-light h-100">
                                                    <div class="card-body p-2">
                                                        <label class="small text-muted mb-0">Calories</label>
                                                        <p class="mb-0 fw-bold small">@Model.CalorieCount cal</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        <div class="@(Model.CalorieCount.HasValue ? "col-6" : "col-12")">
                                            <div class="card bg-light h-100">
                                                <div class="card-body p-2">
                                                    <label class="small text-muted mb-0">Status</label>
                                                    <div>
                                                        @if (Model.NotAvailable)
                                                        {
                                                            <span class="badge bg-danger">Not Available</span>
                                                        }
                                                        else if (Model.IsAvailable)
                                                        {
                                                            <span class="badge bg-success">Available</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">Unavailable</span>
                                                        }
                                                        @if (!Model.IsGstApplicable)
                                                        {
                                                            <span class="badge bg-secondary ms-1">GST Not Applied</span>
                                                        }

                                                        @if (Model.IsFeatured)
                                                        {
                                                            <span class="badge bg-info ms-1">Featured</span>
                                                        }

                                                        @if (Model.IsSpecial)
                                                        {
                                                            <span class="badge bg-warning ms-1">Special</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-12">
                                    <div class="card mb-3 shadow-sm h-100">
                                        <div class="card-header bg-light py-2">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0"><i class="fas fa-align-left me-2"></i>Description</h6>
                                                @if (Model.TargetGP.HasValue)
                                                {
                                                    <span class="badge bg-secondary">Target GP: @Model.TargetGP.Value.ToString("F2")%</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="card-body py-2">
                                            <p class="mb-0">@Model.Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    @if (Model.Allergens != null && Model.Allergens.Any())
                                    {
                                        <div class="card mb-3 shadow-sm">
                                            <div class="card-header bg-light py-2">
                                                <h6 class="mb-0"><i class="fas fa-exclamation-triangle me-2 text-warning"></i>Allergens</h6>
                                            </div>
                                            <div class="card-body py-2">
                                                <div class="row g-2">
                                                    @foreach (var allergen in Model.Allergens)
                                                    {
                                                        <div class="col-md-6 col-sm-4 col-6">
                                                            <div class="card bg-light mb-1">
                                                                <div class="card-body p-2 d-flex align-items-center">
                                                                    @if (!string.IsNullOrEmpty(allergen.Allergen?.IconPath))
                                                                    {
                                                                        <img src="@allergen.Allergen.IconPath" alt="@allergen.Allergen.Name" class="me-2" style="max-height: 20px;" />
                                                                    }
                                                                    else
                                                                    {
                                                                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                                                    }
                                                                    <span>@allergen.Allergen?.Name</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                                <div class="col-md-6">
                                    @if (Model.Ingredients != null && Model.Ingredients.Any())
                                    {
                                        <div class="card mb-3 shadow-sm">
                                            <div class="card-header bg-light py-2">
                                                <h6 class="mb-0"><i class="fas fa-leaf me-2 text-success"></i>Ingredients</h6>
                                            </div>
                                            <div class="card-body p-0">
                                                <div class="table-responsive">
                                                    <table class="table table-sm table-hover mb-0">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th class="py-1">Ingredient</th>
                                                                <th class="py-1">Quantity</th>
                                                                <th class="py-1">Optional</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var ingredient in Model.Ingredients)
                                                            {
                                                                <tr>
                                                                    <td class="py-1">@ingredient.Ingredient?.IngredientsName</td>
                                                                    <td class="py-1">@ingredient.Quantity @ingredient.Unit</td>
                                                                    <td class="py-1">
                                                                        @if (ingredient.IsOptional)
                                                                        {
                                                                            <span class="badge bg-info">Yes</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="badge bg-secondary">No</span>
                                                                        }
                                                                    </td>
                                                                </tr>
                                                                @if (!string.IsNullOrEmpty(ingredient.Instructions))
                                                                {
                                                                    <tr class="table-light">
                                                                        <td colspan="3" class="py-1 small fst-italic text-muted">
                                                                            <i class="fas fa-info-circle me-1"></i> @ingredient.Instructions
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    }

                            </div>
                            <div class="row">
                                <div class="col-12">
                                    @if (Model.Modifiers != null && Model.Modifiers.Any())
                                    {
                                        <div class="card mb-3 shadow-sm">
                                            <div class="card-header bg-light py-2">
                                                <h6 class="mb-0"><i class="fas fa-sliders-h me-2 text-primary"></i>Modifiers</h6>
                                            </div>
                                            <div class="card-body p-2">
                                                <div class="row g-2">
                                                    @foreach (var modifier in Model.Modifiers)
                                                    {
                                                        <div class="col-md-4 col-sm-6 mb-2">
                                                            <div class="card h-100 @(modifier.IsDefault ? "border-primary" : "")">
                                                                <div class="card-body p-2">
                                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                                        <h6 class="mb-0">@modifier.Modifier?.Name</h6>
                                                                        <span class="@(modifier.PriceAdjustment > 0 ? "text-danger" : "text-success") fw-bold">
                                                                            @(modifier.PriceAdjustment > 0 ? "+" : "")@modifier.PriceAdjustment.ToString("C")
                                                                        </span>
                                                                    </div>
                                                                    <div class="d-flex justify-content-between align-items-center">
                                                                        @if (modifier.IsDefault)
                                                                        {
                                                                            <span class="badge bg-success">Default</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="badge bg-secondary">Optional</span>
                                                                        }
                                                                        
                                                                        <span class="badge bg-light text-dark">
                                                                            Max: @(modifier.MaxAllowed.HasValue ? modifier.MaxAllowed.Value.ToString() : "âˆž")
                                                                        </span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
