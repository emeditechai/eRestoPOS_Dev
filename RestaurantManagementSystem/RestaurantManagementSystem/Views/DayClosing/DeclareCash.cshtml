@model RestaurantManagementSystem.Models.DeclaredCashViewModel
@{
    ViewData["Title"] = "Declare Cash";
}

<div class="container-fluid p-4" style="background: linear-gradient(135deg, #f0fdfa 0%, #ccfbf1 100%); min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow">
                <div class="card-header" style="background: linear-gradient(90deg, #14b8a6 0%, #2dd4bf 100%); color: white;">
                    <h4 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Declare Cash - @Model.CashierName</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Business Date: <strong>@Model.BusinessDate.ToString("dddd, MMMM dd, yyyy")</strong>
                    </p>

                    <!-- Summary Info -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <small class="text-muted">Opening Float</small>
                                    <h4 class="mb-0 text-primary">₹@Model.OpeningFloat.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <small class="text-muted">System Cash</small>
                                    <h4 class="mb-0 text-info">₹@Model.SystemAmount.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <small>Expected Cash</small>
                                    <h4 class="mb-0">₹@Model.ExpectedCash.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="DeclareCash" method="post" id="declareCashForm">
                        <input type="hidden" asp-for="CloseId" />
                        <input type="hidden" asp-for="BusinessDate" />
                        <input type="hidden" asp-for="CashierId" />
                        <input type="hidden" asp-for="CashierName" />
                        <input type="hidden" asp-for="OpeningFloat" />
                        <input type="hidden" asp-for="SystemAmount" />
                        <input type="hidden" asp-for="ExpectedCash" />

                        <!-- Denomination Breakdown -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Cash Denomination Breakdown (Optional)</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">₹2000 Notes</label>
                                        <div class="input-group">
                                            <input asp-for="Notes2000" type="number" class="form-control" min="0" value="0" onchange="calculateTotal()" />
                                            <span class="input-group-text denomination-total">₹0</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">₹500 Notes</label>
                                        <div class="input-group">
                                            <input asp-for="Notes500" type="number" class="form-control" min="0" value="0" onchange="calculateTotal()" />
                                            <span class="input-group-text denomination-total">₹0</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">₹200 Notes</label>
                                        <div class="input-group">
                                            <input asp-for="Notes200" type="number" class="form-control" min="0" value="0" onchange="calculateTotal()" />
                                            <span class="input-group-text denomination-total">₹0</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">₹100 Notes</label>
                                        <div class="input-group">
                                            <input asp-for="Notes100" type="number" class="form-control" min="0" value="0" onchange="calculateTotal()" />
                                            <span class="input-group-text denomination-total">₹0</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">₹50 Notes</label>
                                        <div class="input-group">
                                            <input asp-for="Notes50" type="number" class="form-control" min="0" value="0" onchange="calculateTotal()" />
                                            <span class="input-group-text denomination-total">₹0</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">₹20 Notes</label>
                                        <div class="input-group">
                                            <input asp-for="Notes20" type="number" class="form-control" min="0" value="0" onchange="calculateTotal()" />
                                            <span class="input-group-text denomination-total">₹0</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">₹10 Notes</label>
                                        <div class="input-group">
                                            <input asp-for="Notes10" type="number" class="form-control" min="0" value="0" onchange="calculateTotal()" />
                                            <span class="input-group-text denomination-total">₹0</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">Coins</label>
                                        <div class="input-group">
                                            <input asp-for="Coins" type="number" class="form-control" min="0" step="0.01" value="0" onchange="calculateTotal()" />
                                            <span class="input-group-text">₹</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3 p-3 bg-light rounded">
                                    <h5>Calculated Total from Denominations: <span id="calculatedTotal" class="text-primary">₹0.00</span></h5>
                                    <button type="button" class="btn btn-sm btn-primary" onclick="useCalculatedTotal()">
                                        <i class="fas fa-arrow-down"></i> Use This Amount as Declared Cash
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Declared Amount -->
                        <div class="mb-3">
                            <label asp-for="DeclaredAmount" class="form-label">
                                Total Declared Cash Amount <span class="text-danger">*</span>
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">₹</span>
                                <input asp-for="DeclaredAmount" type="number" class="form-control form-control-lg" step="0.01" min="0" required id="declaredAmountInput" />
                            </div>
                            <span asp-validation-for="DeclaredAmount" class="text-danger"></span>
                        </div>

                        <!-- Variance Preview -->
                        <div class="alert alert-info">
                            <h6><i class="fas fa-calculator me-2"></i>Variance Preview:</h6>
                            <p class="mb-0">
                                Expected: <strong>₹@Model.ExpectedCash.ToString("N2")</strong><br />
                                Declared: <strong id="declaredPreview">₹0.00</strong><br />
                                Variance: <strong id="variancePreview" class="text-muted">Enter declared amount to calculate</strong>
                            </p>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle"></i> Submit Cash Declaration
                            </button>
                            <a asp-action="Index" asp-route-date="@Model.BusinessDate.ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel & Go Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        const expectedCash = @Model.ExpectedCash;

        function calculateTotal() {
            const notes2000 = parseInt(document.getElementById('Notes2000').value) || 0;
            const notes500 = parseInt(document.getElementById('Notes500').value) || 0;
            const notes200 = parseInt(document.getElementById('Notes200').value) || 0;
            const notes100 = parseInt(document.getElementById('Notes100').value) || 0;
            const notes50 = parseInt(document.getElementById('Notes50').value) || 0;
            const notes20 = parseInt(document.getElementById('Notes20').value) || 0;
            const notes10 = parseInt(document.getElementById('Notes10').value) || 0;
            const coins = parseFloat(document.getElementById('Coins').value) || 0;

            const total = (notes2000 * 2000) + (notes500 * 500) + (notes200 * 200) + 
                         (notes100 * 100) + (notes50 * 50) + (notes20 * 20) + 
                         (notes10 * 10) + coins;

            document.getElementById('calculatedTotal').textContent = '₹' + total.toFixed(2);

            // Update denomination totals
            const denominationTotals = document.querySelectorAll('.denomination-total');
            denominationTotals[0].textContent = '₹' + (notes2000 * 2000).toFixed(2);
            denominationTotals[1].textContent = '₹' + (notes500 * 500).toFixed(2);
            denominationTotals[2].textContent = '₹' + (notes200 * 200).toFixed(2);
            denominationTotals[3].textContent = '₹' + (notes100 * 100).toFixed(2);
            denominationTotals[4].textContent = '₹' + (notes50 * 50).toFixed(2);
            denominationTotals[5].textContent = '₹' + (notes20 * 20).toFixed(2);
            denominationTotals[6].textContent = '₹' + (notes10 * 10).toFixed(2);
        }

        function useCalculatedTotal() {
            const calculatedText = document.getElementById('calculatedTotal').textContent;
            const amount = parseFloat(calculatedText.replace('₹', '').replace(',', ''));
            document.getElementById('declaredAmountInput').value = amount.toFixed(2);
            updateVariancePreview();
        }

        function updateVariancePreview() {
            const declared = parseFloat(document.getElementById('declaredAmountInput').value) || 0;
            const variance = declared - expectedCash;

            document.getElementById('declaredPreview').textContent = '₹' + declared.toFixed(2);

            const varianceElement = document.getElementById('variancePreview');
            const absVariance = Math.abs(variance);
            const status = variance >= 0 ? 'Over' : 'Short';
            const colorClass = variance >= 0 ? 'text-success' : 'text-danger';

            varianceElement.textContent = '₹' + absVariance.toFixed(2) + ' ' + status;
            varianceElement.className = colorClass;

            if (absVariance > 100) {
                varianceElement.textContent += ' (Manager Approval Required)';
            }
        }

        document.getElementById('declaredAmountInput').addEventListener('input', updateVariancePreview);
        
        // Initialize
        calculateTotal();
        updateVariancePreview();
    </script>
}
